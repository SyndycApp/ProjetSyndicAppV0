<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="SyndicApp.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:auth="clr-namespace:SyndicApp.Mobile.Views.Auth"
    xmlns:dash="clr-namespace:SyndicApp.Mobile.Views.Dashboard"
    Shell.NavBarIsVisible="False">

    <ShellContent
        Route="login"
        Title="Connexion"
        ContentTemplate="{DataTemplate auth:LoginPage}" />

    <ShellContent Route="register" Title="Créer un compte"
        ContentTemplate="{DataTemplate auth:RegisterPage}" />

    <ShellContent Route="forgot" Title="Mot de passe oublié"
        ContentTemplate="{DataTemplate auth:ForgotPasswordPage}" />

    <ShellContent Route="syndic-dashboard" Title="Tableau de bord"
        ContentTemplate="{DataTemplate dash:SyndicDashboardPage}" />
</Shell>
