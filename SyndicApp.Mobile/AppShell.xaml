<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="SyndicApp.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:auth="clr-namespace:SyndicApp.Mobile.Views.Auth"
    xmlns:dash="clr-namespace:SyndicApp.Mobile.Views.Dashboard"
    xmlns:views="clr-namespace:SyndicApp.Mobile.Views.Finances"
    xmlns:viewsRes="clr-namespace:SyndicApp.Mobile.Views.Residences"
    xmlns:layout="clr-namespace:SyndicApp.Mobile.Views"
    xmlns:viewsBat="clr-namespace:SyndicApp.Mobile.Views.Batiments"
    Shell.NavBarIsVisible="False"
    Shell.FlyoutBehavior="Disabled">

    <!-- ======= Auth (pages racines) ======= -->
    <ShellContent Route="login" Title="Connexion"
                  ContentTemplate="{DataTemplate auth:LoginPage}" />
    <ShellContent Route="register" Title="Créer un compte"
                  ContentTemplate="{DataTemplate auth:RegisterPage}" />
    <ShellContent Route="forgot" Title="Mot de passe oublié"
                  ContentTemplate="{DataTemplate auth:ForgotPasswordPage}" />

    <!-- ======= Dashboard (racine) ======= -->
    <ShellContent Route="syndic-dashboard" Title="Tableau de bord"
                  ContentTemplate="{DataTemplate dash:SyndicDashboardPage}" />

    <!-- ======= Finances (racine) ======= -->
    <ShellContent Route="appels" Title="Appels"
                  ContentTemplate="{DataTemplate views:AppelsPage}" />

    <!-- ======= Résidences (racine) ======= -->
    <ShellContent Route="residences"
                  Title="Résidences"
                  ContentTemplate="{DataTemplate viewsRes:ResidencesPage}" />

    <!-- ======= Bâtiments (racine) ======= -->
    <ShellContent Route="batiments"
                  Title="Bâtiments"
                  ContentTemplate="{DataTemplate viewsBat:BatimentsPage}" />

    <!-- ======= Drawer (racine) ======= -->
    <ShellContent Route="drawer" Title="SyndicApp"
                  ContentTemplate="{DataTemplate layout:DrawerPage}" />
</Shell>
