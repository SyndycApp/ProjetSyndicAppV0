<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="SyndicApp.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:auth="clr-namespace:SyndicApp.Mobile.Views.Auth"
    xmlns:dash="clr-namespace:SyndicApp.Mobile.Views.Dashboard"
    xmlns:dashAff="clr-namespace:SyndicApp.Mobile.Views.Dashboard"
    xmlns:finances="clr-namespace:SyndicApp.Mobile.Views.Finances"
    xmlns:viewsRes="clr-namespace:SyndicApp.Mobile.Views.Residences"
    xmlns:layout="clr-namespace:SyndicApp.Mobile.Views"
    xmlns:viewsBat="clr-namespace:SyndicApp.Mobile.Views.Batiments"
    xmlns:viewsLot="clr-namespace:SyndicApp.Mobile.Views.Lots"
    xmlns:viewsALot="clr-namespace:SyndicApp.Mobile.Views.Affectations"
    xmlns:Incidents="clr-namespace:SyndicApp.Mobile.Views.Incidents"
    xmlns:viewsPers="clr-namespace:SyndicApp.Mobile.Views.Personnel"
    Shell.NavBarIsVisible="False"
    Shell.FlyoutBehavior="Disabled">

    <!-- ======= Auth (pages racines) ======= -->
    <ShellContent
        Route="login"
        Title="Connexion"
        ContentTemplate="{DataTemplate auth:LoginPage}" />
    <ShellContent
        Route="register"
        Title="Créer un compte"
        ContentTemplate="{DataTemplate auth:RegisterPage}" />
    <ShellContent
        Route="forgot"
        Title="Mot de passe oublié"
        ContentTemplate="{DataTemplate auth:ForgotPasswordPage}" />

    <!-- ======= Dashboard (racine) ======= -->
    <ShellContent
        Route="syndic-dashboard"
        Title="Tableau de bord"
        ContentTemplate="{DataTemplate dash:SyndicDashboardPage}" />

    <!-- ======= Finances (Appels de fonds – racine) ======= -->
    <ShellContent
        Route="appels"
        Title="Appels"
        ContentTemplate="{DataTemplate finances:AppelsPage}" />

    <!-- ======= Résidences (racine) ======= -->
    <ShellContent
        Route="residences"
        Title="Résidences"
        ContentTemplate="{DataTemplate viewsRes:ResidencesPage}" />

    <!-- ======= Bâtiments (racine) ======= -->
    <ShellContent
        Route="batiments"
        Title="Batiments"
        ContentTemplate="{DataTemplate viewsBat:BatimentsPage}" />

    <!-- ======= Lots (racine) ======= -->
    <ShellContent
        Route="lots"
        Title="Lots"
        ContentTemplate="{DataTemplate viewsLot:LotsPage}" />

    <!-- ======= Affectation Lots (racine) ======= -->
    <ShellContent
        Route="affectation-lots"
        Title="Affectation des lots"
        ContentTemplate="{DataTemplate viewsALot:AffectationsPage}" />

    <!-- ======= Drawer (racine) ======= -->
    <ShellContent
        Route="drawer"
        Title="SyndicApp"
        ContentTemplate="{DataTemplate layout:DrawerPage}" />

    <!-- ======= Dashboards Affectations (racine) ======= -->
    <ShellContent
        Route="affectation-dashboard"
        Title="Dashboard affectations"
        ContentTemplate="{DataTemplate dash:AffectationDashboardPage}" />

    <ShellContent
        Route="affectation-user-dashboard"
        Title="Mon espace"
        ContentTemplate="{DataTemplate dashAff:AffectationUserDashboardPage}" />

    <ShellContent
        Route="affectation-maintenance-dashboard"
        Title="Gardien"
        ContentTemplate="{DataTemplate dashAff:AffectationMaintenanceDashboardPage}" />

    <ShellContent
        Route="affectation-analytics"
        Title="Statistiques"
        ContentTemplate="{DataTemplate dash:AffectationAnalyticsPage}" />

    <!-- ======= Charges (Finances) ======= -->
    <ShellContent
        Route="charges"
        Title="Charges"
        ContentTemplate="{DataTemplate finances:ChargesPage}" />

    <ShellContent
        Route="paiements"
        Title="Paiements"
        ContentTemplate="{DataTemplate finances:PaiementsPage}" />

    <ShellContent
        Route="incidents"
        Title="Incidents"
        ContentTemplate="{DataTemplate Incidents:IncidentsPage}" />

    <ShellContent
        Route="devis-travaux"
        ContentTemplate="{DataTemplate Incidents:DevisTravauxPage}" />

    <ShellContent
        Route="interventions"
        Title="Interventions"
        ContentTemplate="{DataTemplate Incidents:InterventionsPage}" />

    <ShellContent
        Route="prestataires"
        ContentTemplate="{DataTemplate viewsPers:PrestatairesPage}" />

</Shell>
