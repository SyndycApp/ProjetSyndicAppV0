<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="SyndicApp.Mobile.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:SyndicApp.Mobile.Converters">

    <Application.Resources>
        <ResourceDictionary>

            <!-- ThÃ¨mes / couleurs globales -->
            <Color x:Key="PrimaryColor">#1E63E9</Color>
            <Color x:Key="ErrorColor">#B3261E</Color>

            <Style TargetType="Button">
                <Setter Property="CornerRadius" Value="12" />
                <Setter Property="FontAttributes" Value="Bold" />
            </Style>

            <!-- Converter global -->
            <converters:ProgressConverter x:Key="ProgressConverter" />
            <converters:FirstLetterConverter x:Key="FirstLetterConverter"/>

        </ResourceDictionary>
    </Application.Resources>

</Application>
