<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="SyndicApp.Mobile.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:SyndicApp.Mobile.Converters">

    <Application.Resources>
        <ResourceDictionary>

            
            <!-- ThÃ¨mes / couleurs globales -->
            <Color x:Key="PrimaryColor">#1E63E9</Color>
            <Color x:Key="ErrorColor">#B3261E</Color>

            <Style TargetType="Button">
                <Setter Property="CornerRadius" Value="12" />
                <Setter Property="FontAttributes" Value="Bold" />
            </Style>

            <Style x:Key="KpiValueStyle" TargetType="Label">
                <Setter Property="FontSize" Value="26"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="TextColor" Value="#111827"/>
            </Style>
            <Style x:Key="Card" TargetType="Frame">
                <Setter Property="CornerRadius" Value="12" />
                <Setter Property="Padding" Value="12" />
                <Setter Property="BackgroundColor" Value="White" />
                <Setter Property="Shadow">
                    <Setter.Value>
                        <Shadow Brush="#00000022"
                    Offset="0,4"
                    Radius="10" />
                    </Setter.Value>
                </Setter>
            </Style>

            
            <Style x:Key="KpiCardStyle" TargetType="Frame">
                <Setter Property="CornerRadius" Value="12"/>
                <Setter Property="Padding" Value="16"/>
                <Setter Property="BackgroundColor" Value="#F9FAFB"/>
                <Setter Property="HasShadow" Value="True"/>
                <Setter Property="BorderColor" Value="#E5E7EB"/>
            </Style>
            <Style x:Key="KpiTitleStyle" TargetType="Label">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="TextColor" Value="#6B7280"/>
                <Setter Property="FontAttributes" Value="None"/>
            </Style>

            <!-- Converter global -->
            <converters:ProgressConverter x:Key="ProgressConverter" />
            <converters:FirstLetterConverter x:Key="FirstLetterConverter"/>
            <converters:BubbleColorConverter x:Key="BubbleColorConverter" />
            <converters:BubbleAlignmentConverter x:Key="BubbleAlignmentConverter" />
            <converters:MessageSeenIconConverter x:Key="MessageSeenIconConverter"/>

        </ResourceDictionary>
    </Application.Resources>

</Application>
