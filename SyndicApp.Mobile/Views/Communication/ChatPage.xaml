<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    x:Class="SyndicApp.Mobile.Views.Communication.ChatPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:layout="clr-namespace:SyndicApp.Mobile.Views.Layout"
    xmlns:vm="clr-namespace:SyndicApp.Mobile.ViewModels.Communication"
    x:DataType="vm:ChatViewModel"
    Shell.NavBarIsVisible="False"
    BackgroundColor="#F3F4F6"
    >

    <layout:RoleDrawerLayout x:Name="DrawerLayout">

        <!-- ========= CONTENU PRINCIPAL ========= -->
        <layout:RoleDrawerLayout.MainContent>

            <Grid RowDefinitions="Auto,*,Auto">

                <!-- HEADER -->
                <Grid BackgroundColor="#2563EB"
                      Padding="16"
                      HeightRequest="60"
                      ColumnDefinitions="40,*">

                    <ImageButton Source="arrow_back_white.png"
                                 WidthRequest="28"
                                 HeightRequest="28"
                                 BackgroundColor="Transparent"
                                 Clicked="OnBackClicked"/>

                    <Label Grid.Column="1"
                           Text="{Binding Title}"
                           FontSize="22"
                           TextColor="White"
                           VerticalOptions="Center"
                           FontAttributes="Bold"/>
                </Grid>

                <!-- LISTE MESSAGES -->
                <CollectionView Grid.Row="1"
                                x:Name="MessagesList"
                                ItemsSource="{Binding Messages}"
                                Margin="10"
                                VerticalOptions="FillAndExpand">

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="5">

                                <Frame CornerRadius="14"
                                       HasShadow="False"
                                       MaximumWidthRequest="260"
                                       BackgroundColor="{Binding UserId, Converter={StaticResource BubbleColorConverter}}"
                                       HorizontalOptions="{Binding UserId, Converter={StaticResource BubbleAlignmentConverter}}">

                                    <VerticalStackLayout Spacing="4" Padding="10">

                                        <Label Text="{Binding Contenu}"
                                               TextColor="Black"
                                               FontSize="16"/>

                                        <Label Text="{Binding CreatedAt, StringFormat='{0:HH:mm}'}"
                                               FontSize="12"
                                               TextColor="#6B7280"
                                               HorizontalTextAlignment="End"/>
                                    </VerticalStackLayout>

                                </Frame>

                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- BARRE D'ÉCRITURE -->
                <Grid Grid.Row="2"
                      Padding="10"
                      BackgroundColor="White"
                      ColumnDefinitions="*,Auto"
                      VerticalOptions="End">

                    <Frame CornerRadius="20"
                           BackgroundColor="#F0F0F0"
                           HeightRequest="48"
                           Padding="8"
                           HasShadow="False"
                           VerticalOptions="Center">

                        <Entry Text="{Binding NewMessage}"
                               Placeholder="Écrire un message…"
                               FontSize="10"
                               TextColor="Black"
                               BackgroundColor="Transparent"/>
                    </Frame>

                    <ImageButton Grid.Column="1"
                                 Source="send_icon.png"
                                 WidthRequest="44"
                                 HeightRequest="44"
                                 BackgroundColor="Transparent"
                                 VerticalOptions="Center"
                                 Command="{Binding SendMessageCommand}"/>
                </Grid>

            </Grid>

        </layout:RoleDrawerLayout.MainContent>

    </layout:RoleDrawerLayout>

</ContentPage>
