<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    x:Class="SyndicApp.Mobile.Views.Communication.ChatPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:SyndicApp.Mobile.ViewModels.Communication"
    xmlns:conv="clr-namespace:SyndicApp.Mobile.Converters"
    x:DataType="vm:ChatViewModel"
    Shell.NavBarIsVisible="False"
    BackgroundColor="#F3F4F6">

    <!-- âœ… Converters requis -->
    <ContentPage.Resources>
        <conv:BubbleAlignmentConverter x:Key="BubbleAlignmentConverter"/>
        <conv:BubbleColorConverter x:Key="BubbleColorConverter"/>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- ðŸ”µ HEADER -->
        <Grid BackgroundColor="#2563EB"
              Padding="16"
              HeightRequest="60"
              ColumnDefinitions="40,*">

            <ImageButton 
                Source="arrow_back_white.png"
                WidthRequest="28"
                HeightRequest="28"
                BackgroundColor="Transparent"
                Clicked="OnBackClicked"/>

            <Label Grid.Column="1"
                   Text="{Binding Title}"
                   FontSize="22"
                   TextColor="White"
                   VerticalOptions="Center"
                   FontAttributes="Bold"/>
        </Grid>


        <!-- ðŸŸ© LISTE DES MESSAGES (STACKLAYOUT + BINDABLELAYOUT) -->
        <ScrollView x:Name="MessagesScrollView"
                    Grid.Row="1"
                    Padding="10"
                    VerticalOptions="FillAndExpand">

            <VerticalStackLayout x:Name="MessagesStack"
                                 Spacing="8"
                                 BindableLayout.ItemsSource="{Binding Messages}">

                <BindableLayout.ItemTemplate>
                    <DataTemplate>

                        <Frame 
                            CornerRadius="14"
                            HasShadow="False"
                            Padding="10"
                            MaximumWidthRequest="280"
                            BackgroundColor="{Binding UserId, Converter={StaticResource BubbleColorConverter}}"
                            HorizontalOptions="{Binding UserId, Converter={StaticResource BubbleAlignmentConverter}}">

                            <VerticalStackLayout Spacing="4">

                                <Label 
                                    Text="{Binding Contenu}"
                                    TextColor="Black"
                                    FontSize="16"
                                    LineBreakMode="WordWrap"/>

                                <Label 
                                    Text="{Binding CreatedAt, StringFormat='{0:HH:mm}'}"
                                    FontSize="12"
                                    TextColor="#6B7280"
                                    HorizontalTextAlignment="End"/>

                            </VerticalStackLayout>

                        </Frame>

                    </DataTemplate>
                </BindableLayout.ItemTemplate>

            </VerticalStackLayout>

        </ScrollView>


        <!-- ðŸŸ¦ BARRE D'Ã‰CRITURE -->
        <Grid Grid.Row="2"
              Padding="12"
              BackgroundColor="White"
              ColumnDefinitions="*,Auto">

            <Frame 
                CornerRadius="20"
                BackgroundColor="#F0F0F0"
                Padding="12"
                HeightRequest="48"
                VerticalOptions="Center">

                <Entry 
                    Text="{Binding NewMessage}"
                    Placeholder="Ã‰crire un messageâ€¦"
                    FontSize="16"
                    TextColor="Black"
                    BackgroundColor="Transparent"/>
            </Frame>

            <ImageButton 
                Grid.Column="1"
                Source="send_icon.png"
                WidthRequest="44"
                HeightRequest="44"
                BackgroundColor="Transparent"
                Margin="8,0,0,0"
                VerticalOptions="Center"
                Command="{Binding SendMessageCommand}"/>
        </Grid>

    </Grid>

</ContentPage>
