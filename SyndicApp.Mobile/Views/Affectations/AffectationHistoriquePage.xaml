<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SyndicApp.Mobile.Views.Affectations.AffectationHistoriquePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:layout="clr-namespace:SyndicApp.Mobile.Views.Layout"
    Title="Historique des affectations"
    Shell.NavBarIsVisible="False"
    BackgroundColor="White">

    <layout:RoleDrawerLayout>
        <layout:RoleDrawerLayout.MainContent>

            <Grid Padding="16" RowDefinitions="Auto,*">

                <!-- Titre -->
                <Label Grid.Row="0"
                       Text="Historique du lot"
                       FontSize="22"
                       FontAttributes="Bold"
                       TextColor="#111827" />

                <!-- Liste -->
                <CollectionView Grid.Row="1"
                                Margin="0,12,0,0"
                                ItemsSource="{Binding Items}"
                                SelectionMode="None">

                    <CollectionView.EmptyView>
                        <Grid Padding="24" VerticalOptions="Center">
                            <Label Text="Aucune affectation trouvée pour ce lot."
                                   HorizontalTextAlignment="Center"
                                   Opacity="0.6" />
                        </Grid>
                    </CollectionView.EmptyView>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Margin="0,6"
                                   Padding="14"
                                   CornerRadius="14"
                                   HasShadow="False"
                                   BackgroundColor="White"
                                   BorderColor="#E5E7EB">

                                <Grid RowDefinitions="Auto,Auto,Auto"
                                      ColumnDefinitions="*,Auto">

                                    <!-- Ligne 1 : utilisateur + statut -->
                                    <Label Grid.Row="0"
                                           Grid.Column="0"
                                           Text="{Binding UserNom}"
                                           FontAttributes="Bold" />

                                    <Label Grid.Row="0"
                                           Grid.Column="1"
                                           Text="{Binding Statut}"
                                           FontAttributes="Bold"
                                           HorizontalTextAlignment="End" />

                                    <!-- Ligne 2 : dates -->
                                    <Grid Grid.Row="1"
                                          Grid.ColumnSpan="2"
                                          ColumnDefinitions="*,*"
                                          Margin="0,6,0,0">
                                        <Label Grid.Column="0"
                                               Text="{Binding DateDebut, StringFormat='Début : {0:dd/MM/yyyy}'}"
                                               Opacity="0.7" />
                                        <Label Grid.Column="1"
                                               Text="{Binding DateFin, StringFormat='Fin : {0:dd/MM/yyyy}'}"
                                               HorizontalTextAlignment="End"
                                               Opacity="0.7" />
                                    </Grid>

                                    <!-- Ligne 3 : propriétaire -->
                                    <Grid Grid.Row="2"
                                          Grid.ColumnSpan="2"
                                          ColumnDefinitions="Auto,Auto"
                                          Margin="0,6,0,0">
                                        <Label Grid.Column="0"
                                               Text="Propriétaire : "
                                               Opacity="0.7" />
                                        <Label Grid.Column="1"
                                               Text="{Binding EstProprietaire, StringFormat='{0}'}" />
                                    </Grid>

                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </Grid>

        </layout:RoleDrawerLayout.MainContent>
    </layout:RoleDrawerLayout>
</ContentPage>
