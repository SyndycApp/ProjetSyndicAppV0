<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SyndicApp.Mobile.Views.Affectations.AffectationHistoriquePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:SyndicApp.Mobile.ViewModels.Affectations"
    xmlns:models="clr-namespace:SyndicApp.Mobile.Models"
    x:DataType="vm:AffectationHistoriqueViewModel"
    x:Name="RootPage"
    Title="Historique des affectations"
    BackgroundColor="White"
    Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <Color x:Key="TopbarColor">#2563EB</Color>
        <Color x:Key="HeaderTextOnDark">#FFFFFF</Color>
        <Color x:Key="BodyText">#111827</Color>
        <Color x:Key="Divider">#E5E7EB</Color>

        <Style TargetType="Label">
            <Setter Property="TextColor" Value="{StaticResource BodyText}" />
        </Style>

        <Style x:Key="CardStyle" TargetType="Frame">
            <Setter Property="HasShadow" Value="False"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Padding" Value="14"/>
            <Setter Property="BackgroundColor" Value="White"/>
            <Setter Property="BorderColor" Value="#E5E7EB"/>
        </Style>

        <!-- (Optionnel) Si déjà défini globalement, tu peux supprimer ce bloc -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="TextColor" Value="{StaticResource BodyText}" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="HorizontalOptions" Value="Start" />
        </Style>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*" BackgroundColor="White">

        <!-- TOPBAR -->
        <Grid BackgroundColor="{StaticResource TopbarColor}" Padding="12,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="BtnOpen"
                    Grid.Column="0"
                    Text="☰"
                    FontSize="22"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource HeaderTextOnDark}"
                    Clicked="OpenDrawer_Clicked"/>

            <Label Grid.Column="1"
                   Text="Historique des affectations"
                   HorizontalTextAlignment="Center"
                   VerticalOptions="Center"
                   FontAttributes="Bold"
                   TextColor="{StaticResource HeaderTextOnDark}"/>

            <Label Grid.Column="2"
                   Text="• • •"
                   TextColor="{StaticResource HeaderTextOnDark}"
                   VerticalOptions="Center"/>
        </Grid>

        <!-- CONTENU -->
        <!-- Correction: Padding -> Margin (CollectionView n'a pas de Padding) -->
        <CollectionView Grid.Row="1" ItemsSource="{Binding Items}" SelectionMode="None" Margin="16">
            <CollectionView.EmptyView>
                <Grid Padding="24" VerticalOptions="Center">
                    <Label Text="Aucun historique pour ce lot."
                           HorizontalTextAlignment="Center"
                           Opacity="0.6"/>
                </Grid>
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Style="{StaticResource CardStyle}" Margin="0,6">
                        <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto">
                            <VerticalStackLayout Grid.Row="0" Grid.Column="0" Spacing="2">
                                <Label Text="{Binding UserNom}" FontAttributes="Bold" />
                                <Label Text="{Binding LotNumero}" Opacity="0.7" />
                            </VerticalStackLayout>

                            <Label Grid.Row="0" Grid.Column="1"
                                   Text="{Binding Statut}"
                                   FontAttributes="Bold"
                                   HorizontalTextAlignment="End" />

                            <Grid Grid.Row="1" Grid.ColumnSpan="2"
                                  ColumnDefinitions="*,*,Auto"
                                  Margin="0,4,0,0">
                                <Label Grid.Column="0"
                                       Text="{Binding DateDebut, StringFormat='Début : {0:dd/MM/yyyy}'}"
                                       Opacity="0.7"/>
                                <Label Grid.Column="1"
                                       Text="{Binding DateFin, StringFormat='Fin : {0:dd/MM/yyyy}'}"
                                       Opacity="0.7"
                                       HorizontalTextAlignment="Center"/>
                                <Label Grid.Column="2"
                                       Text="{Binding EstProprietaire, StringFormat='Propriétaire : {0}'}"
                                       HorizontalTextAlignment="End"/>
                            </Grid>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- OVERLAY -->
        <BoxView x:Name="Backdrop"
                 Grid.RowSpan="2"
                 BackgroundColor="#66000000"
                 Opacity="0"
                 InputTransparent="True">
            <BoxView.GestureRecognizers>
                <TapGestureRecognizer Tapped="Backdrop_Tapped"/>
            </BoxView.GestureRecognizers>
        </BoxView>

        <!-- DRAWER -->
        <Border x:Name="Drawer"
                Grid.RowSpan="2"
                BackgroundColor="White"
                StrokeThickness="0"
                TranslationX="-1000"
                Padding="0">
            <Grid RowDefinitions="Auto,*">
                <Grid BackgroundColor="{StaticResource TopbarColor}" Padding="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Label Text="Navigation"
                           TextColor="{StaticResource HeaderTextOnDark}"
                           FontAttributes="Bold"
                           VerticalOptions="Center"/>
                    <Button Grid.Column="1"
                            Text="×"
                            FontSize="22"
                            BackgroundColor="Transparent"
                            TextColor="{StaticResource HeaderTextOnDark}"
                            Clicked="CloseDrawer_Clicked"/>
                </Grid>

                <ScrollView Grid.Row="1" BackgroundColor="White">
                    <VerticalStackLayout Padding="16" Spacing="10">
                        <Button Text="Dashboard" Style="{StaticResource MenuButtonStyle}" CommandParameter="//syndic-dashboard" Clicked="OnMenuItemClicked"/>
                            <Button Text="Dashboard Affectations"
            Style="{StaticResource MenuButtonStyle}"
            CommandParameter="//affectation-dashboard"
            Clicked="OnMenuItemClicked"/>
            <Button Text="Mon espace (copro)"
        CommandParameter="//affectation-user-dashboard"
        Clicked="OnMenuItemClicked"/>

<Button Text="Gardien / Maintenance"
        CommandParameter="//affectation-maintenance-dashboard"
        Clicked="OnMenuItemClicked"/>

<Button Text="Statistiques affectations"
        CommandParameter="//affectation-analytics"
        Clicked="OnMenuItemClicked"/>
                        <BoxView HeightRequest="1" BackgroundColor="{StaticResource Divider}" />
                        <Button Text="Résidences"            Style="{StaticResource MenuButtonStyle}"  CommandParameter="//residences"                     Clicked="OnMenuItemClicked"/>
                        <Button Text="Bâtiments"              Style="{StaticResource MenuButtonStyle}" CommandParameter="//batiments"                     Clicked="OnMenuItemClicked"/>
                        <Button Text="Lots"                   Style="{StaticResource MenuButtonStyle}" CommandParameter="//lots"                          Clicked="OnMenuItemClicked"/>
                        <Button Text="Affectations des lots"  Style="{StaticResource MenuButtonStyle}" CommandParameter="//affectation-lots"             Clicked="OnMenuItemClicked"/>
                        <Button Text="Historique affectations" Style="{StaticResource MenuButtonStyle}" CommandParameter="//affectation-historique"      Clicked="OnMenuItemClicked"/>
                        <BoxView HeightRequest="16" Opacity="0"/>
                        <Button Text="Déconnexion" Style="{StaticResource MenuButtonStyle}" CommandParameter="//login" Clicked="OnMenuItemClicked"/>
                    </VerticalStackLayout>
                </ScrollView>
            </Grid>
        </Border>
    </Grid>
</ContentPage>
