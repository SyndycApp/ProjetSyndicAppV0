<?xml version="1.0" encoding="utf-8" ?>
<layouts:RoleDrawerLayout
    x:Class="SyndicApp.Mobile.Views.Affectations.AffectationHistoriquePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:SyndicApp.Mobile.ViewModels.Affectations"
    xmlns:layouts="clr-namespace:SyndicApp.Mobile.Views.Layout"
    x:DataType="vm:AffectationHistoriqueViewModel"
    BackgroundColor="White"
    Shell.NavBarIsVisible="False">

    <layouts:RoleDrawerLayout.Resources>
        <Color x:Key="BodyText">#111827</Color>
        <Color x:Key="Divider">#E5E7EB</Color>

        <Style TargetType="Label">
            <Setter Property="TextColor" Value="{StaticResource BodyText}" />
        </Style>

        <Style x:Key="CardStyle" TargetType="Frame">
            <Setter Property="HasShadow" Value="False" />
            <Setter Property="CornerRadius" Value="14" />
            <Setter Property="Padding" Value="14" />
            <Setter Property="BackgroundColor" Value="White" />
            <Setter Property="BorderColor" Value="#E5E7EB" />
        </Style>
    </layouts:RoleDrawerLayout.Resources>

    <CollectionView ItemsSource="{Binding Items}"
                    SelectionMode="None"
                    Margin="16">
        <CollectionView.EmptyView>
            <Grid Padding="24" VerticalOptions="Center">
                <Label Text="Aucun historique pour ce lot."
                       HorizontalTextAlignment="Center"
                       Opacity="0.6" />
            </Grid>
        </CollectionView.EmptyView>

        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Style="{StaticResource CardStyle}" Margin="0,6">
                    <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto">
                        <VerticalStackLayout Grid.Row="0" Grid.Column="0" Spacing="2">
                            <Label Text="{Binding UserNom}" FontAttributes="Bold" />
                            <Label Text="{Binding LotNumero}" Opacity="0.7" />
                        </VerticalStackLayout>

                        <Label Grid.Row="0" Grid.Column="1"
                               Text="{Binding Statut}"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="End" />

                        <Grid Grid.Row="1" Grid.ColumnSpan="2"
                              ColumnDefinitions="*,*,Auto"
                              Margin="0,4,0,0">
                            <Label Grid.Column="0"
                                   Text="{Binding DateDebut, StringFormat='Début : {0:dd/MM/yyyy}'}"
                                   Opacity="0.7" />
                            <Label Grid.Column="1"
                                   Text="{Binding DateFin, StringFormat='Fin : {0:dd/MM/yyyy}'}"
                                   Opacity="0.7"
                                   HorizontalTextAlignment="Center" />
                            <Label Grid.Column="2"
                                   Text="{Binding EstProprietaire, StringFormat='Propriétaire : {0}'}"
                                   HorizontalTextAlignment="End" />
                        </Grid>
                    </Grid>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</layouts:RoleDrawerLayout>
