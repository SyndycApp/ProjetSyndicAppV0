<?xml version="1.0" encoding="utf-8" ?>
<layouts:RoleDrawerLayout
    x:Class="SyndicApp.Mobile.Views.Affectations.AffectationDetailsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:SyndicApp.Mobile.ViewModels.Affectations"
    xmlns:converters="clr-namespace:SyndicApp.Mobile.Converters"
    xmlns:layouts="clr-namespace:SyndicApp.Mobile.Views.Layout"
    x:DataType="vm:AffectationDetailsViewModel"
    BackgroundColor="White"
    Shell.NavBarIsVisible="True">

    <layouts:RoleDrawerLayout.Resources>
        <Color x:Key="BodyText">#111827</Color>
        <Color x:Key="Divider">#E5E7EB</Color>
        <Color x:Key="Danger">#DC2626</Color>

        <converters:BoolToOuiNonConverter x:Key="BoolToOuiNonConverter" />

        <Style TargetType="Label">
            <Setter Property="TextColor" Value="{StaticResource BodyText}" />
        </Style>

        <Style x:Key="TitleLabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="TextColor" Value="{StaticResource BodyText}" />
        </Style>

        <Style x:Key="CardStyle" TargetType="Frame">
            <Setter Property="HasShadow" Value="False" />
            <Setter Property="CornerRadius" Value="14" />
            <Setter Property="Padding" Value="14" />
            <Setter Property="BackgroundColor" Value="White" />
            <Setter Property="BorderColor" Value="{StaticResource Divider}" />
        </Style>

        <Style x:Key="OutlineButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="TextColor" Value="#2563EB" />
            <Setter Property="BorderColor" Value="#2563EB" />
            <Setter Property="BorderWidth" Value="1" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Padding" Value="14,10" />
        </Style>

        <Style x:Key="DangerOutlineButtonStyle" TargetType="Button" BasedOn="{StaticResource OutlineButtonStyle}">
            <Setter Property="TextColor" Value="{StaticResource Danger}" />
            <Setter Property="BorderColor" Value="{StaticResource Danger}" />
        </Style>
    </layouts:RoleDrawerLayout.Resources>

    <ScrollView Padding="16,16,16,32">
        <VerticalStackLayout Spacing="16">

            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8" Margin="0,0,0,4">
                <Label Grid.Column="0"
                       Text="Détails de l'affectation"
                       Style="{StaticResource TitleLabelStyle}"
                       VerticalOptions="Center"
                       LineBreakMode="TailTruncation"
                       MaxLines="1" />

                <Button Grid.Column="1"
                        Text="🗑"
                        Style="{StaticResource DangerOutlineButtonStyle}"
                        WidthRequest="44"
                        HeightRequest="40"
                        Padding="0"
                        HorizontalOptions="End"
                        VerticalOptions="Center"
                        Command="{Binding DeleteCommand}"
                        IsVisible="{Binding CanDelete}" />
            </Grid>

            <Frame Style="{StaticResource CardStyle}">
                <VerticalStackLayout Spacing="6">
                    <Label Text="{Binding Item.LotNumero, StringFormat='Lot : {0}'}" />
                    <Label Text="{Binding Item.UserNom,   StringFormat='Utilisateur : {0}'}" />
                    <Label Text="{Binding Item.Statut,    StringFormat='Statut : {0}'}" />
                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="6">
                        <Label Grid.Column="0" Text="Propriétaire :" />
                        <Label Grid.Column="1"
                               Text="{Binding Item.EstProprietaire, Converter={StaticResource BoolToOuiNonConverter}}" />
                    </Grid>
                    <Label Text="{Binding Item.DateDebut, StringFormat='Début : {0:dd/MM/yyyy}'}" />
                    <Label Text="{Binding Item.DateFin,   StringFormat='Fin : {0:dd/MM/yyyy}'}" />
                </VerticalStackLayout>
            </Frame>

            <HorizontalStackLayout Spacing="12" Padding="0,0,0,8">
                <Button Text="Clôturer"
                        Style="{StaticResource OutlineButtonStyle}"
                        Command="{Binding CloturerCommand}"
                        IsVisible="{Binding CanEdit}" />

                <Button Text="Changer statut"
                        Style="{StaticResource OutlineButtonStyle}"
                        Command="{Binding ToggleStatutCommand}"
                        IsVisible="{Binding CanEdit}" />

                <Button Text="Historique"
                        Style="{StaticResource OutlineButtonStyle}"
                        Command="{Binding OpenHistoriqueCommand}" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</layouts:RoleDrawerLayout>
