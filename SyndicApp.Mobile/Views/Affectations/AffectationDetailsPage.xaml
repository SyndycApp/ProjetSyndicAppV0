<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SyndicApp.Mobile.Views.Affectations.AffectationDetailsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:layout="clr-namespace:SyndicApp.Mobile.Views.Layout"
    xmlns:converters="clr-namespace:SyndicApp.Mobile.Converters"
    Title="Détails affectation"
    Shell.NavBarIsVisible="False"
    BackgroundColor="White">

    <ContentPage.Resources>
        <converters:BoolToOuiNonConverter x:Key="BoolToOuiNonConverter" />

        <Color x:Key="BodyText">#111827</Color>

        <Style x:Key="FieldLabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="TextColor" Value="#6B7280" />
        </Style>

        <Style x:Key="ValueLabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="TextColor" Value="{StaticResource BodyText}" />
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#2563EB" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Padding" Value="14,10" />
        </Style>

        <Style x:Key="OutlineButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="TextColor" Value="#2563EB" />
            <Setter Property="BorderColor" Value="#2563EB" />
            <Setter Property="BorderWidth" Value="1" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Padding" Value="14,10" />
        </Style>
    </ContentPage.Resources>

    <layout:RoleDrawerLayout>
        <layout:RoleDrawerLayout.MainContent>

            <ScrollView>
                <VerticalStackLayout Padding="16" Spacing="14">
  

                           <!-- Bouton retour -->
                     <Button Text="← Retour"
                             Clicked="OnBackClicked"
                             BackgroundColor="Transparent"
                             TextColor="#2563EB"
                             FontSize="16"
                             HorizontalOptions="Start"
                             Padding="0,0,0,10" />                   
                    <Label Text="Détails de l'affectation"
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="{StaticResource BodyText}" />

                    <!-- 1 champ par ligne -->
                    <Grid ColumnDefinitions="Auto,*"
                          RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto"
                          RowSpacing="8">

                        <!-- Utilisateur -->
                        <Label Grid.Row="0" Grid.Column="0"
                               Text="Utilisateur :"
                               Style="{StaticResource FieldLabelStyle}" />
                        <Label Grid.Row="0" Grid.Column="1"
                               Text="{Binding Item.UserNom}"
                               Style="{StaticResource ValueLabelStyle}" />

                        <!-- Lot -->
                        <Label Grid.Row="1" Grid.Column="0"
                               Text="Lot :"
                               Style="{StaticResource FieldLabelStyle}" />
                        <Label Grid.Row="1" Grid.Column="1"
                               Text="{Binding Item.LotNumero}"
                               Style="{StaticResource ValueLabelStyle}" />

                        <!-- Statut -->
                        <Label Grid.Row="2" Grid.Column="0"
                               Text="Statut :"
                               Style="{StaticResource FieldLabelStyle}" />
                        <Label Grid.Row="2" Grid.Column="1"
                               Text="{Binding Item.Statut}"
                               Style="{StaticResource ValueLabelStyle}" />

                        <!-- Date début -->
                        <Label Grid.Row="3" Grid.Column="0"
                               Text="Date début :"
                               Style="{StaticResource FieldLabelStyle}" />
                        <Label Grid.Row="3" Grid.Column="1"
                               Text="{Binding Item.DateDebut, StringFormat='{0:dd/MM/yyyy}'}"
                               Style="{StaticResource ValueLabelStyle}" />

                        <!-- Date fin -->
                        <Label Grid.Row="4" Grid.Column="0"
                               Text="Date fin :"
                               Style="{StaticResource FieldLabelStyle}" />
                        <Label Grid.Row="4" Grid.Column="1"
                               Text="{Binding Item.DateFin, StringFormat='{0:dd/MM/yyyy}'}"
                               Style="{StaticResource ValueLabelStyle}" />

                        <!-- Propriétaire -->
                        <Label Grid.Row="5" Grid.Column="0"
                               Text="Propriétaire :"
                               Style="{StaticResource FieldLabelStyle}" />
                        <Label Grid.Row="5" Grid.Column="1"
                               Text="{Binding Item.EstProprietaire, Converter={StaticResource BoolToOuiNonConverter}}"
                               Style="{StaticResource ValueLabelStyle}" />
                    </Grid>

                    <!-- Boutons -->
                    <VerticalStackLayout Spacing="10" Margin="0,20,0,0">
                        <Button x:Name="BtnEdit"
                                Text="Modifier"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Command="{Binding EditCommand}" />

                        <Button x:Name="BtnClose"
                                Text="Clôturer l'affectation"
                                Style="{StaticResource OutlineButtonStyle}"
                                Command="{Binding CloturerCommand}" />

                        <Button Text="Historique du lot"
                                Style="{StaticResource OutlineButtonStyle}"
                                Command="{Binding OpenHistoriqueCommand}" />
                    </VerticalStackLayout>

                </VerticalStackLayout>
            </ScrollView>

        </layout:RoleDrawerLayout.MainContent>
    </layout:RoleDrawerLayout>
</ContentPage>
