<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SyndicApp.Mobile.Views.Affectations.AffectationDetailsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:layout="clr-namespace:SyndicApp.Mobile.Views.Layout"
    xmlns:vm="clr-namespace:SyndicApp.Mobile.ViewModels.Affectations"
    xmlns:converters="clr-namespace:SyndicApp.Mobile.Converters"
    Title="Détails affectation"
    Shell.NavBarIsVisible="False"
    BackgroundColor="White">

    <ContentPage.Resources>
        <converters:BoolToOuiNonConverter x:Key="BoolToOuiNonConverter" />

        <Style x:Key="FieldLabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="TextColor" Value="#6B7280" />
        </Style>

        <Style x:Key="ValueLabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="TextColor" Value="{StaticResource BodyText}" />
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#2563EB" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Padding" Value="14,10" />
        </Style>

        <Style x:Key="OutlineButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="TextColor" Value="#2563EB" />
            <Setter Property="BorderColor" Value="#2563EB" />
            <Setter Property="BorderWidth" Value="1" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Padding" Value="14,10" />
        </Style>
    </ContentPage.Resources>

    <layout:RoleDrawerLayout>
        <layout:RoleDrawerLayout.MainContent>

            <ScrollView>
                <VerticalStackLayout Padding="16" Spacing="14">

                    <Label Text="Détails de l'affectation"
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="{StaticResource BodyText}" />

                    <Grid ColumnDefinitions="Auto,*" RowSpacing="8">

                        <Label Grid.Column="0" Text="Utilisateur :" Style="{StaticResource FieldLabelStyle}" />
                        <Label Grid.Column="1" Text="{Binding UserNom}" Style="{StaticResource ValueLabelStyle}" />

                        <Label Grid.Column="0" Text="Lot :" Style="{StaticResource FieldLabelStyle}" />
                        <Label Grid.Column="1" Text="{Binding LotNumero}" Style="{StaticResource ValueLabelStyle}" />

                        <Label Grid.Column="0" Text="Statut :" Style="{StaticResource FieldLabelStyle}" />
                        <Label Grid.Column="1" Text="{Binding Statut}" Style="{StaticResource ValueLabelStyle}" />

                        <Label Grid.Column="0" Text="Date début :" Style="{StaticResource FieldLabelStyle}" />
                        <Label Grid.Column="1"
                               Text="{Binding DateDebut, StringFormat='{0:dd/MM/yyyy}'}"
                               Style="{StaticResource ValueLabelStyle}" />

                        <Label Grid.Column="0" Text="Date fin :" Style="{StaticResource FieldLabelStyle}" />
                        <Label Grid.Column="1"
                               Text="{Binding DateFin, StringFormat='{0:dd/MM/yyyy}'}"
                               Style="{StaticResource ValueLabelStyle}" />

                        <Label Grid.Column="0" Text="Propriétaire :" Style="{StaticResource FieldLabelStyle}" />
                        <Label Grid.Column="1"
                               Text="{Binding EstProprietaire, Converter={StaticResource BoolToOuiNonConverter}}"
                               Style="{StaticResource ValueLabelStyle}" />
                    </Grid>

                    <VerticalStackLayout Spacing="10" Margin="0,20,0,0">
                        <Button x:Name="BtnEdit"
                                Text="Modifier"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Command="{Binding EditCommand}" />

                        <Button x:Name="BtnClose"
                                Text="Clôturer l'affectation"
                                Style="{StaticResource OutlineButtonStyle}"
                                Command="{Binding CloseCommand}" />

                        <Button Text="Historique du lot"
                                Style="{StaticResource OutlineButtonStyle}"
                                Command="{Binding GoToHistoriqueCommand}" />
                    </VerticalStackLayout>

                </VerticalStackLayout>
            </ScrollView>

        </layout:RoleDrawerLayout.MainContent>
    </layout:RoleDrawerLayout>
</ContentPage>
