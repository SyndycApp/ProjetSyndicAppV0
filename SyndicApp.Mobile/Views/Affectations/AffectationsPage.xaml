<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SyndicApp.Mobile.Views.Affectations.AffectationsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:layout="clr-namespace:SyndicApp.Mobile.Views.Layout"
    xmlns:vm="clr-namespace:SyndicApp.Mobile.ViewModels.Affectations"
    Title="Affectations"
    Shell.NavBarIsVisible="False"
    BackgroundColor="White">

    <!-- Pas de x:DataType pour éviter les warnings XC00xx -->

    <layout:RoleDrawerLayout>
        <layout:RoleDrawerLayout.MainContent>

            <Grid Padding="16" RowDefinitions="Auto,Auto,*">

                <!-- Titre + bouton AJOUT -->
                <Grid RowDefinitions="Auto"
                      ColumnDefinitions="*,Auto">
                    <Label Text="Affectations des lots"
                           FontSize="22"
                           FontAttributes="Bold" />

                    <Button x:Name="BtnAddAffectation"
                            Grid.Column="1"
                            Text="+"
                            BackgroundColor="#2563EB"
                            TextColor="White"
                            CornerRadius="12"
                            Padding="14,6"
                            Clicked="OnAddAffectationClicked" />
                </Grid>

                <!-- Filtres -->
                <Grid Row="1"
                      ColumnDefinitions="*,*,Auto"
                      RowDefinitions="Auto,Auto"
                      Margin="0,8,0,8">

                    <!-- Utilisateur -->
                    <VerticalStackLayout Grid.Row="1"
                                         Grid.Column="0"
                                         Spacing="4">
                        <Label Text="Utilisateur"
                               FontSize="12"
                               TextColor="#6B7280" />
                        <Picker ItemsSource="{Binding Users}"
                                ItemDisplayBinding="{Binding FullName}"
                                SelectedItem="{Binding SelectedUser}"
                                TextColor="Black"
                                BackgroundColor="White" />
                    </VerticalStackLayout>

                    <!-- Lot -->
                    <VerticalStackLayout Grid.Row="1"
                                         Grid.Column="1"
                                         Spacing="4">
                        <Label Text="Lot"
                               FontSize="12"
                               TextColor="#6B7280" />
                        <Picker ItemsSource="{Binding Lots}"
                                ItemDisplayBinding="{Binding NumeroLot}"
                                SelectedItem="{Binding SelectedLot}"
                                Title="Tous"
                                HorizontalOptions="FillAndExpand"
                                TextColor="Black"
                                BackgroundColor="White" />
                    </VerticalStackLayout>

                    <!-- Bouton Filtrer -->
                    <VerticalStackLayout Grid.Row="1"
                                         Grid.Column="2"
                                         Spacing="4"
                                         HorizontalOptions="End">
                        <Label Text=" " />
                        <Button Text="Filtrer"
                                BackgroundColor="Transparent"
                                TextColor="#2563EB"
                                BorderColor="#2563EB"
                                BorderWidth="1"
                                CornerRadius="10"
                                Padding="14,10"
                                Command="{Binding FilterCommand}" />
                    </VerticalStackLayout>
                </Grid>

                <!-- Liste -->
                <CollectionView Grid.Row="2"
                                ItemsSource="{Binding Items}"
                                SelectionMode="None">
                    <CollectionView.EmptyView>
                        <Grid Padding="24" VerticalOptions="Center">
                            <Label Text="Aucune affectation trouvée."
                                   HorizontalTextAlignment="Center"
                                   Opacity="0.6" />
                        </Grid>
                    </CollectionView.EmptyView>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Margin="0,6"
                                   Padding="14"
                                   CornerRadius="14"
                                   HasShadow="False"
                                   BackgroundColor="White"
                                   BorderColor="#E5E7EB">
                                <Grid RowDefinitions="Auto,Auto"
                                      ColumnDefinitions="*,Auto">

                                    <!-- Ligne 1 : lot + user + statut -->
                                    <VerticalStackLayout Grid.Row="0"
                                                         Grid.Column="0"
                                                         Spacing="2">
                                        <Label Text="{Binding LotNumero}"
                                               FontAttributes="Bold" />
                                        <Label Text="{Binding UserNom}" />
                                    </VerticalStackLayout>

                                    <Label Grid.Row="0"
                                           Grid.Column="1"
                                           Text="{Binding Statut}"
                                           HorizontalTextAlignment="End"
                                           FontAttributes="Bold" />

                                    <!-- Dates -->
                                    <Grid Grid.Row="1"
                                          Grid.ColumnSpan="2"
                                          ColumnDefinitions="*,*"
                                          Margin="0,6,0,0">
                                        <Label Grid.Column="0"
                                               Text="{Binding DateDebut, StringFormat='Début : {0:dd/MM/yyyy}'}"
                                               Opacity="0.7" />
                                        <Label Grid.Column="1"
                                               Text="{Binding DateFin, StringFormat='Fin : {0:dd/MM/yyyy}'}"
                                               Opacity="0.7"
                                               HorizontalTextAlignment="End" />
                                    </Grid>

                                    <!-- Propriétaire + bouton détails -->
                                    <Grid Grid.Row="1"
                                          Grid.ColumnSpan="2"
                                          ColumnDefinitions="Auto,Auto,*,Auto"
                                          Margin="0,40,0,0">
                                        <Label Grid.Column="0"
                                               Text="Propriétaire : "
                                               Opacity="0.7" />
                                        <Label Grid.Column="1"
                                               Text="{Binding EstProprietaireLabel}" />
                                        <Label Grid.Column="2" />

                                        <Button Grid.Column="3"
                                                Text="Détails"
                                                BackgroundColor="Transparent"
                                                TextColor="#2563EB"
                                                BorderColor="#2563EB"
                                                BorderWidth="1"
                                                CornerRadius="10"
                                                Padding="10,6"
                                                Clicked="OnDetailsClicked" />
                                    </Grid>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </Grid>

        </layout:RoleDrawerLayout.MainContent>
    </layout:RoleDrawerLayout>
</ContentPage>
