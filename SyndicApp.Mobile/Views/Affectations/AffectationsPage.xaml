<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SyndicApp.Mobile.Views.Affectations.AffectationsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:layout="clr-namespace:SyndicApp.Mobile.Views.Layout"
    xmlns:converters="clr-namespace:SyndicApp.Mobile.Converters"
    Title="Affectations"
    Shell.NavBarIsVisible="False"
    BackgroundColor="White">

    <ContentPage.Resources>
        <converters:BoolToOuiNonConverter x:Key="BoolToOuiNonConverter" />
    </ContentPage.Resources>

    <layout:RoleDrawerLayout>
        <layout:RoleDrawerLayout.MainContent>

            <Grid Padding="16"
                  RowDefinitions="Auto,Auto,*">

                <!-- HEADER -->
                <Grid ColumnDefinitions="*,Auto">
                    <Label Text="Affectations des lots"
                           FontSize="22"
                           FontAttributes="Bold" />

                    <Button x:Name="BtnAddAffectation"
                            Grid.Column="1"
                            Text="+"
                            BackgroundColor="#2563EB"
                            TextColor="White"
                            CornerRadius="12"
                            Padding="14,6"
                            Clicked="OnAddAffectationClicked" />
                </Grid>

                <!-- FILTRE UTILISATEUR UNIQUEMENT -->
                <Grid Row="1"
                      ColumnDefinitions="*,Auto"
                      Margin="0,12,0,12">

                    <VerticalStackLayout Grid.Column="0"
                                         Spacing="4">
                        <Label Text="Utilisateur"
                               FontSize="12"
                               TextColor="#6B7280" />
                        <Picker ItemsSource="{Binding Users}"
                                ItemDisplayBinding="{Binding FullName}"
                                SelectedItem="{Binding SelectedUser}"
                                TextColor="Black"
                                BackgroundColor="White" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Grid.Column="1"
                                         Spacing="4"
                                         HorizontalOptions="End">
                        <Label Text=" " />
                        <Button Text="Filtrer"
                                BackgroundColor="Transparent"
                                TextColor="#2563EB"
                                BorderColor="#2563EB"
                                BorderWidth="1"
                                CornerRadius="10"
                                Padding="14,10"
                                Command="{Binding FilterCommand}" />
                    </VerticalStackLayout>

                </Grid>

                <!-- LISTE AFFECTATIONS -->
                <CollectionView Grid.Row="2"
                                ItemsSource="{Binding Items}"
                                SelectionMode="None">

                    <CollectionView.EmptyView>
                        <Grid Padding="24" VerticalOptions="Center">
                            <Label Text="Aucune affectation trouvée."
                                   HorizontalTextAlignment="Center"
                                   Opacity="0.6" />
                        </Grid>
                    </CollectionView.EmptyView>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Margin="0,6"
                                   Padding="14"
                                   CornerRadius="14"
                                   HasShadow="False"
                                   BackgroundColor="White"
                                   BorderColor="#E5E7EB">

                                <Grid RowDefinitions="Auto,Auto,Auto"
                                      ColumnDefinitions="*,Auto">

                                    <!-- ROW 0 : LOT / USER / STATUT -->
                                    <VerticalStackLayout Grid.Row="0"
                                                         Grid.Column="0"
                                                         Spacing="2">
                                        <Label Text="{Binding LotNumero}"
                                               FontAttributes="Bold" />
                                        <Label Text="{Binding UserNom}" />
                                    </VerticalStackLayout>

                                    <Label Grid.Row="0"
                                           Grid.Column="1"
                                           Text="{Binding Statut}"
                                           FontAttributes="Bold"
                                           HorizontalTextAlignment="End" />

                                    <!-- ROW 1 : DATES -->
                                    <Grid Grid.Row="1"
                                          Grid.ColumnSpan="2"
                                          ColumnDefinitions="*,*"
                                          Margin="0,8,0,0">
                                        <Label Grid.Column="0"
                                               Text="{Binding DateDebut,
                                              StringFormat='Début : {0:dd/MM/yyyy}'}"
                                               Opacity="0.7" />
                                        <Label Grid.Column="1"
                                               Text="{Binding DateFin,
                                              StringFormat='Fin : {0:dd/MM/yyyy}'}"
                                               HorizontalTextAlignment="End"
                                               Opacity="0.7" />
                                    </Grid>

                                    <!-- ROW 2 : PROPRIÉTAIRE + BOUTON DÉTAILS -->
                                    <Grid Grid.Row="2"
                                          Grid.ColumnSpan="2"
                                          ColumnDefinitions="Auto,Auto,*,Auto"
                                          Margin="0,14,0,0">

                                        <Label Grid.Column="0"
                                               Text="Propriétaire :"
                                               Opacity="0.7" />

                                        <Label Grid.Column="1"
                                               Text="{Binding EstProprietaire,
                                                      Converter={StaticResource BoolToOuiNonConverter}}" />

                                        <Label Grid.Column="2" />

                                        <Button Grid.Column="3"
                                                Text="Détails"
                                                BackgroundColor="Transparent"
                                                TextColor="#2563EB"
                                                BorderColor="#2563EB"
                                                BorderWidth="1"
                                                CornerRadius="10"
                                                Padding="10,6"
                                                Clicked="OnDetailsClicked" />
                                    </Grid>

                                </Grid>

                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>

                </CollectionView>

            </Grid>

        </layout:RoleDrawerLayout.MainContent>
    </layout:RoleDrawerLayout>
</ContentPage>
