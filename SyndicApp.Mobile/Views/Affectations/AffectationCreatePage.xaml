<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SyndicApp.Mobile.Views.Affectations.AffectationCreatePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:layout="clr-namespace:SyndicApp.Mobile.Views.Layout"
    xmlns:vm="clr-namespace:SyndicApp.Mobile.ViewModels.Affectations"
    Title="Nouvelle affectation"
    Shell.NavBarIsVisible="False"
    BackgroundColor="White">

    <ContentPage.Resources>
        <Style x:Key="FieldLabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="TextColor" Value="#6B7280" />
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#2563EB" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Padding" Value="14,10" />
        </Style>

        <Style x:Key="OutlineButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="TextColor" Value="#2563EB" />
            <Setter Property="BorderColor" Value="#2563EB" />
            <Setter Property="BorderWidth" Value="1" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Padding" Value="14,10" />
        </Style>
    </ContentPage.Resources>

    <layout:RoleDrawerLayout>
        <layout:RoleDrawerLayout.MainContent>

            <ScrollView>
                <VerticalStackLayout Padding="16" Spacing="14">

                    <Label Text="Nouvelle affectation"
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="{StaticResource BodyText}" />

                    <VerticalStackLayout Spacing="4">
                        <Label Text="Utilisateur" Style="{StaticResource FieldLabelStyle}" />
                        <Picker ItemsSource="{Binding Users}"
                                ItemDisplayBinding="{Binding FullName}"
                                SelectedItem="{Binding SelectedUser}"
                                Title="Choisir un utilisateur"
                                TextColor="Black"
                                BackgroundColor="White" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="4">
                        <Label Text="Lot" Style="{StaticResource FieldLabelStyle}" />
                        <Picker ItemsSource="{Binding Lots}"
                                ItemDisplayBinding="{Binding NumeroLot}"
                                SelectedItem="{Binding SelectedLot}"
                                Title="Choisir un lot"
                                TextColor="Black"
                                BackgroundColor="White" />
                    </VerticalStackLayout>

                    <HorizontalStackLayout Spacing="10">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="Date début" Style="{StaticResource FieldLabelStyle}" />
                            <DatePicker Date="{Binding DateDebut}" />
                        </VerticalStackLayout>

                        <VerticalStackLayout Spacing="4">
                            <Label Text="Date fin (optionnelle)" Style="{StaticResource FieldLabelStyle}" />
                            <DatePicker Date="{Binding DateFin}" />
                        </VerticalStackLayout>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                        <Label Text="Propriétaire ?" Style="{StaticResource FieldLabelStyle}" />
                        <Switch IsToggled="{Binding EstProprietaire}" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="10" Margin="0,20,0,0">
                        <Button x:Name="BtnSave"
                                Text="Enregistrer"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Command="{Binding CreateAsyncCommand}" />

                        <Button Text="Annuler"
                                Style="{StaticResource OutlineButtonStyle}"
                                Command="{Binding CancelCommand}" />
                    </HorizontalStackLayout>

                </VerticalStackLayout>
            </ScrollView>

        </layout:RoleDrawerLayout.MainContent>
    </layout:RoleDrawerLayout>
</ContentPage>
