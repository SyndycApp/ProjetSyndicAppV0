<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SyndicApp.Mobile.Views.Dashboard.SyndicDashboardPage"
    Title="Dashboard"
    BackgroundColor="{StaticResource PageBg}">

    <!-- Toolbar en haut -->
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Déconnexion"
                     Priority="0"
                     Order="Primary"
                     Command="{Binding LogoutCommand}" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="24">

            <Label Text="Bienvenue"
                   FontSize="22"
                   FontAttributes="Bold"
                   TextColor="{StaticResource TitleColor}" />

            <!-- Carte : Appels de fonds -->
            <Frame Padding="20"
                   CornerRadius="18"
                   HasShadow="False"
                   BackgroundColor="{StaticResource CardBg}"
                   BorderColor="{StaticResource PrimaryColor}">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Appels de fonds"
                           FontAttributes="Bold"
                           FontSize="18"
                           TextColor="{StaticResource TitleColor}" />
                    <Label Text="Lister et suivre les appels"
                           FontSize="13"
                           TextColor="{StaticResource MutedColor}" />
                    <Button Text="Ouvrir"
                            Margin="0,10,0,0"
                            HeightRequest="42"
                            BackgroundColor="{StaticResource PrimaryColor}"
                            TextColor="White"
                            Command="{Binding GoToAppelsAsyncCommand}" />
                </VerticalStackLayout>
            </Frame>

            <!-- Bouton Logout -->
            <Button Text="Se déconnecter"
                    Command="{Binding LogoutCommand}"
                    HeightRequest="48"
                    BackgroundColor="#E53935"
                    TextColor="White"
                    CornerRadius="14"
                    FontAttributes="Bold"
                    Margin="0,40,0,0"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
