<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SyndicApp.Mobile.Views.Incidents.DevisTravauxCreatePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:SyndicApp.Mobile.ViewModels.Incidents"
    xmlns:layouts="clr-namespace:SyndicApp.Mobile.Views.Layout"
    xmlns:models="clr-namespace:SyndicApp.Mobile.Models"
    x:DataType="vm:DevisTravauxCreateViewModel"
    x:Name="RootPage"
    Title="Nouveau devis"
    BackgroundColor="#F9FAFB"
    Shell.NavBarIsVisible="False">

    <!-- ===================== RESSOURCES ===================== -->
    <ContentPage.Resources>

        <Color x:Key="TopbarColor">#2563EB</Color>
        <Color x:Key="HeaderTextOnDark">#FFFFFF</Color>
        <Color x:Key="BodyText">#111827</Color>
        <Color x:Key="Divider">#E5E7EB</Color>
        <Color x:Key="Chip">#F3F4F6</Color>

        <!-- Label par défaut -->
        <Style TargetType="Label">
            <Setter Property="TextColor" Value="{StaticResource BodyText}" />
        </Style>

        <!-- Titre principal -->
        <Style x:Key="TitleLabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontAttributes" Value="Bold" />
        </Style>

        <!-- Labels des champs -->
        <Style x:Key="FieldLabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="13" />
            <Setter Property="TextColor" Value="#4B5563" />
        </Style>

        <!-- Fix : couleur du texte invisible -->
        <Style TargetType="Entry">
            <Setter Property="TextColor" Value="#111827" />
            <Setter Property="PlaceholderColor" Value="#9CA3AF" />
        </Style>

        <Style TargetType="Editor">
            <Setter Property="TextColor" Value="#111827" />
            <Setter Property="PlaceholderColor" Value="#9CA3AF" />
        </Style>

        <!-- Buttons -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#2563EB" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Padding" Value="14,10" />
        </Style>

        <Style x:Key="OutlineButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="TextColor" Value="#2563EB" />
            <Setter Property="BorderColor" Value="#2563EB" />
            <Setter Property="BorderWidth" Value="1" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Padding" Value="14,10" />
        </Style>

        <!-- Card -->
        <Style x:Key="CardStyle" TargetType="Frame">
            <Setter Property="HasShadow" Value="True" />
            <Setter Property="CornerRadius" Value="14" />
            <Setter Property="Padding" Value="16" />
            <Setter Property="BackgroundColor" Value="White" />
            <Setter Property="BorderColor" Value="#E5E7EB" />
            <Setter Property="Margin" Value="0,10,0,10" />
        </Style>

    </ContentPage.Resources>


    <!-- ===================== LAYOUT PRINCIPAL ===================== -->
    <layouts:RoleDrawerLayout>
        <layouts:RoleDrawerLayout.MainContent>

            <ScrollView>
                <VerticalStackLayout Padding="16" Spacing="20">

                    <!-- Titre -->
                    <Label Text="Créer un devis de travaux"
                           Style="{StaticResource TitleLabelStyle}" />

                    <!-- ===================== CARTE FORMULAIRE ===================== -->
                    <Frame Style="{StaticResource CardStyle}">
                        <VerticalStackLayout Spacing="18">

                            <!-- Titre -->
                            <Label Text="Titre" Style="{StaticResource FieldLabelStyle}" />
                            <Entry Text="{Binding Titre}"
                                   Placeholder="Ex: Réparation toiture bâtiment A" />

                            <!-- Description -->
                            <Label Text="Description" Style="{StaticResource FieldLabelStyle}" />
                            <Editor Text="{Binding Description}"
                                    AutoSize="TextChanges"
                                    HeightRequest="100"
                                    Placeholder="Détaillez le besoin, le contexte, etc." />

                            <!-- Montant HT -->
                            <Label Text="Montant HT" Style="{StaticResource FieldLabelStyle}" />
                            <Entry Text="{Binding MontantHT}"
                                   Keyboard="Numeric"
                                   Placeholder="Ex: 15000" />

                            <!-- Taux TVA -->
                            <Label Text="Taux TVA (%)" Style="{StaticResource FieldLabelStyle}" />
                            <Entry Text="{Binding TauxTVA}"
                                   Keyboard="Numeric"
                                   Placeholder="Ex: 20" />

                            <!-- Résidence -->
                            <Label Text="Résidence" Style="{StaticResource FieldLabelStyle}" />
                            <Picker ItemsSource="{Binding Residences}"
                                    ItemDisplayBinding="{Binding Nom}"
                                    SelectedItem="{Binding SelectedResidence}" />

                            <!-- Incident lié -->
                            <Label Text="Incident lié (optionnel)" Style="{StaticResource FieldLabelStyle}" />
                            <Picker ItemsSource="{Binding Incidents}"
                                    ItemDisplayBinding="{Binding Titre}"
                                    SelectedItem="{Binding SelectedIncident}" />

                        </VerticalStackLayout>
                    </Frame>

                    <!-- ===================== BOUTONS ===================== -->
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                        <Button Grid.Column="0"
                                Text="Annuler"
                                Style="{StaticResource OutlineButtonStyle}"
                                Command="{Binding CancelCommand}" />

                        <Button Grid.Column="1"
                                Text="Créer"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Command="{Binding SaveCommand}">
                            <Button.Triggers>
                                <DataTrigger TargetType="Button"
                                             Binding="{Binding IsBusy}"
                                             Value="True">
                                    <Setter Property="Text" Value="Enregistrement..." />
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>
                    </Grid>

                </VerticalStackLayout>
            </ScrollView>

        </layouts:RoleDrawerLayout.MainContent>
    </layouts:RoleDrawerLayout>

</ContentPage>
