<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SyndicApp.Mobile.Views.Incidents.IncidentsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:SyndicApp.Mobile.Converters"
    xmlns:vm="clr-namespace:SyndicApp.Mobile.ViewModels.Incidents"
    xmlns:models="clr-namespace:SyndicApp.Mobile.Models"
    xmlns:layout="clr-namespace:SyndicApp.Mobile.Views.Layout"
    x:DataType="vm:IncidentsListViewModel"
    x:Name="RootPage"
    Title="Incidents"
    BackgroundColor="White"
    Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <Color x:Key="TopbarColor">#2563EB</Color>
        <Color x:Key="HeaderTextOnDark">#FFFFFF</Color>
        <Color x:Key="BodyText">#111827</Color>
        <Color x:Key="Divider">#E5E7EB</Color>
        <Color x:Key="Chip">#F3F4F6</Color>

        <converters:BoolToOuiNonConverter x:Key="BoolToOuiNonConverter" />

        <Style TargetType="Label">
            <Setter Property="TextColor" Value="{StaticResource BodyText}" />
        </Style>

        <Style TargetType="Picker">
            <Setter Property="TextColor" Value="Black" />
            <Setter Property="TitleColor" Value="#6B7280" />
            <Setter Property="BackgroundColor" Value="White" />
        </Style>

        <Style x:Key="TitleLabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontAttributes" Value="Bold" />
        </Style>

        <Style x:Key="FieldLabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="TextColor" Value="#6B7280" />
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#2563EB" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Padding" Value="14,10" />
        </Style>

        <Style x:Key="OutlineButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="TextColor" Value="#2563EB" />
            <Setter Property="BorderColor" Value="#2563EB" />
            <Setter Property="BorderWidth" Value="1" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Padding" Value="14,10" />
        </Style>

        <Style x:Key="CardStyle" TargetType="Frame">
            <Setter Property="HasShadow" Value="False" />
            <Setter Property="CornerRadius" Value="14" />
            <Setter Property="Padding" Value="14" />
            <Setter Property="BackgroundColor" Value="White" />
            <Setter Property="BorderColor" Value="#E5E7EB" />
        </Style>
    </ContentPage.Resources>

    <!-- Utilisation du drawer global -->
    <layout:RoleDrawerLayout x:Name="DrawerLayout">

        <layout:RoleDrawerLayout.MainContent>

            <!-- CONTENU DE LA PAGE -->
            <Grid Padding="16" RowDefinitions="Auto,Auto,*">

                <!-- Titre + CTA -->
                <Grid Row="0" ColumnDefinitions="*,Auto">
                    <Label Text="Incidents" Style="{StaticResource TitleLabelStyle}" />
                    <Button Grid.Column="1"
                            Text="+"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Command="{Binding GoToCreateCommand}" />
                </Grid>

                <!-- Filtres -->
                <Grid Row="1"
                      RowDefinitions="Auto,Auto"
                      ColumnDefinitions="*,*">

                    <!-- Ligne 1 -->
                    <VerticalStackLayout Grid.Row="0" Grid.Column="0" Spacing="4">
                        <Label Text="Utilisateur" Style="{StaticResource FieldLabelStyle}" />
                        <Picker ItemsSource="{Binding Users}"
                                ItemDisplayBinding="{Binding FullName}"
                                SelectedItem="{Binding SelectedUser}"
                                Title="Tous les utilisateurs" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Grid.Row="0" Grid.Column="1" Spacing="4">
                        <Label Text="Résidence" Style="{StaticResource FieldLabelStyle}" />
                        <Picker ItemsSource="{Binding Residences}"
                                ItemDisplayBinding="{Binding Nom}"
                                SelectedItem="{Binding SelectedResidence}"
                                Title="Toutes les résidences" />
                    </VerticalStackLayout>

                    <!-- Ligne 2 -->
                    <VerticalStackLayout Grid.Row="1" Grid.Column="0" Spacing="4">
                        <Label Text="Lot" Style="{StaticResource FieldLabelStyle}" />
                        <Picker ItemsSource="{Binding Lots}"
                                ItemDisplayBinding="{Binding NumeroLot}"
                                SelectedItem="{Binding SelectedLot}"
                                Title="Tous les lots" />
                    </VerticalStackLayout>

                    <Grid Grid.Row="1" Grid.Column="1" ColumnDefinitions="*,Auto">
                        <VerticalStackLayout Grid.Column="0" Spacing="4">
                            <Label Text="Urgence" Style="{StaticResource FieldLabelStyle}" />
                            <Picker ItemsSource="{Binding Urgences}"
                                    SelectedItem="{Binding SelectedUrgence}"
                                    Title="Toutes" />
                        </VerticalStackLayout>

                        <HorizontalStackLayout Grid.Column="1"
                                               Spacing="6"
                                               HorizontalOptions="End"
                                               VerticalOptions="End">
                            <Button Text="Vider"
                                    Style="{StaticResource OutlineButtonStyle}"
                                    Command="{Binding ClearFiltersCommand}" />

                            <Button Text="Filtrer"
                                    Style="{StaticResource OutlineButtonStyle}"
                                    Command="{Binding FilterCommand}" />
                        </HorizontalStackLayout>
                    </Grid>

                </Grid>

                <!-- LISTE -->
                <CollectionView Grid.Row="2"
                                ItemsSource="{Binding Items}"
                                SelectionMode="None">

                    <CollectionView.EmptyView>
                        <Grid Padding="24" VerticalOptions="Center">
                            <Label Text="Aucun incident trouvé."
                                   HorizontalTextAlignment="Center"
                                   Opacity="0.6" />
                        </Grid>
                    </CollectionView.EmptyView>

                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:IncidentDto">
                            <Frame Style="{StaticResource CardStyle}" Margin="0,6">

                                <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">

                                    <!-- TITRE + URGENCE -->
                                    <Grid Grid.Row="0" Grid.ColumnSpan="2" ColumnDefinitions="*,Auto">

                                        <Label Grid.Column="0"
                                               Text="{Binding Titre}"
                                               FontAttributes="Bold"
                                               FontSize="15" />

                                        <Border Grid.Column="1"
                                                BackgroundColor="{StaticResource Chip}"
                                                StrokeThickness="0"
                                                Padding="8,2"
                                                HorizontalOptions="End"
                                                VerticalOptions="Center"
                                                StrokeShape="RoundRectangle 10">

                                            <Label Text="{Binding Urgence}"
                                                   FontSize="12"
                                                   HorizontalTextAlignment="Center"
                                                   VerticalTextAlignment="Center" />
                                        </Border>

                                    </Grid>

                                    <!-- Utilisateur -->
                                    <Label Grid.Row="1" Grid.ColumnSpan="2"
                                           Margin="0,4,0,0"
                                           FontSize="13"
                                           Text="{Binding DeclarantNomComplet, StringFormat='Déclaré par : {0}'}" />

                                    <!-- Description + bouton Détails -->
                                    <Grid Grid.Row="2" Grid.ColumnSpan="2" Margin="0,10,0,0" ColumnDefinitions="*,Auto">
                                        <Label Grid.Column="0"
                                               FontSize="12"
                                               Opacity="0.8"
                                               LineBreakMode="TailTruncation"
                                               MaxLines="2"
                                               Text="{Binding Description}" />

                                        <Button Grid.Column="1"
                                                Text="Détails"
                                                Style="{StaticResource OutlineButtonStyle}"
                                                Command="{Binding BindingContext.GoToDetailsCommand, Source={x:Reference RootPage}}"
                                                CommandParameter="{Binding Id}" />
                                    </Grid>

                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>

                </CollectionView>

            </Grid>

        </layout:RoleDrawerLayout.MainContent>
    </layout:RoleDrawerLayout>
</ContentPage>
