<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SyndicApp.Mobile.Views.Incidents.DevisTravauxPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:SyndicApp.Mobile.ViewModels.Incidents"
    xmlns:models="clr-namespace:SyndicApp.Mobile.Models"
    xmlns:layouts="clr-namespace:SyndicApp.Mobile.Views.Layout"
    x:DataType="vm:DevisTravauxListViewModel"
    x:Name="RootPage"
    Title="Devis de travaux"
    BackgroundColor="White"
    Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <Color x:Key="TopbarColor">#2563EB</Color>
        <Color x:Key="HeaderTextOnDark">#FFFFFF</Color>
        <Color x:Key="BodyText">#111827</Color>
        <Color x:Key="Divider">#E5E7EB</Color>
        <Color x:Key="Chip">#F3F4F6</Color>

        <Style TargetType="Label">
            <Setter Property="TextColor" Value="{StaticResource BodyText}" />
        </Style>

        <Style x:Key="TitleLabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontAttributes" Value="Bold" />
        </Style>

        <Style x:Key="FieldLabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="TextColor" Value="#6B7280" />
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#2563EB" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Padding" Value="14,10" />
        </Style>

        <Style x:Key="OutlineButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="TextColor" Value="#2563EB" />
            <Setter Property="BorderColor" Value="#2563EB" />
            <Setter Property="BorderWidth" Value="1" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Padding" Value="14,10" />
        </Style>

        <Style x:Key="CardStyle" TargetType="Frame">
            <Setter Property="HasShadow" Value="False" />
            <Setter Property="CornerRadius" Value="14" />
            <Setter Property="Padding" Value="14" />
            <Setter Property="BackgroundColor" Value="White" />
            <Setter Property="BorderColor" Value="#E5E7EB" />
        </Style>
    </ContentPage.Resources>

    <!-- ====== Layout global avec drawer partagé ====== -->
    <layouts:RoleDrawerLayout>
        <layouts:RoleDrawerLayout.MainContent>

            <Grid BackgroundColor="White" Padding="16" RowDefinitions="Auto,*">

                <!-- Header local : titre + bouton nouveau (Syndic only) -->
                <Grid Row="0" ColumnDefinitions="*,Auto">
                    <Label Text="Devis de travaux" Style="{StaticResource TitleLabelStyle}" />

                    <Button Grid.Column="1"
                            Text="+"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Command="{Binding GoToCreateCommand}"
                            IsVisible="{Binding IsSyndic}" />
                </Grid>

                <!-- Liste avec pull-to-refresh -->
                <RefreshView Grid.Row="1"
                             Margin="0,12,0,0"
                             Command="{Binding RefreshAsyncCommand}"
                             IsRefreshing="{Binding IsRefreshing}">
                    <CollectionView
                        ItemsSource="{Binding Items}"
                        SelectionMode="None">

                        <CollectionView.EmptyView>
                            <Grid Padding="24" VerticalOptions="Center">
                                <Label Text="Aucun devis trouvé."
                                       HorizontalTextAlignment="Center"
                                       Opacity="0.6" />
                            </Grid>
                        </CollectionView.EmptyView>

                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:DevisTravauxDto">
                                <Frame Style="{StaticResource CardStyle}" Margin="0,6">
                                    <Grid RowDefinitions="Auto,Auto,Auto"
                                          ColumnDefinitions="*,Auto">

                                        <!-- Titre + Statut -->
                                        <Grid Grid.Row="0" Grid.ColumnSpan="2"
                                              ColumnDefinitions="*,Auto">
                                            <Label Grid.Column="0"
                                                   Text="{Binding Titre}"
                                                   FontAttributes="Bold"
                                                   FontSize="15" />

                                            <Border Grid.Column="1"
                                                    BackgroundColor="{StaticResource Chip}"
                                                    StrokeThickness="0"
                                                    Padding="8,2"
                                                    HorizontalOptions="End"
                                                    VerticalOptions="Center">
                                                <Label Text="{Binding Statut}"
                                                       FontSize="12"
                                                       HorizontalTextAlignment="Center"
                                                       VerticalTextAlignment="Center" />
                                            </Border>
                                        </Grid>

                                        <!-- Description -->
                                        <Label Grid.Row="1" Grid.ColumnSpan="2"
                                               Margin="0,4,0,0"
                                               FontSize="13"
                                               Opacity="0.8"
                                               LineBreakMode="TailTruncation"
                                               MaxLines="2"
                                               Text="{Binding Description}" />

                                        <!-- Montants + bouton détails -->
                                        <Grid Grid.Row="2" Grid.ColumnSpan="2"
                                              Margin="0,10,0,0"
                                              ColumnDefinitions="*,Auto">
                                            <Label Grid.Column="0"
                                                   FontSize="12"
                                                   Opacity="0.8">
                                                <Label.Text>
                                                    <MultiBinding StringFormat="Montant HT: {0}  |  TTC: {1}">
                                                        <Binding Path="MontantHT" />
                                                        <Binding Path="MontantTTC" />
                                                    </MultiBinding>
                                                </Label.Text>
                                            </Label>

                                            <Button Grid.Column="1"
                                                    Text="Détails"
                                                    Style="{StaticResource OutlineButtonStyle}"
                                                    Command="{Binding Source={x:Reference RootPage},
                                                                      Path=BindingContext.GoToDetailsCommand}"
                                                    CommandParameter="{Binding Id}" />
                                        </Grid>

                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </RefreshView>
            </Grid>

        </layouts:RoleDrawerLayout.MainContent>
    </layouts:RoleDrawerLayout>
</ContentPage>
