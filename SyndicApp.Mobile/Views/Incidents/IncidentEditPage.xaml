<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SyndicApp.Mobile.Views.Incidents.IncidentEditPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:SyndicApp.Mobile.ViewModels.Incidents"
    x:DataType="vm:IncidentEditViewModel"
    x:Name="RootPage"
    Title="Modifier incident"
    BackgroundColor="White"
    Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <Color x:Key="TopbarColor">#2563EB</Color>
        <Color x:Key="HeaderTextOnDark">#FFFFFF</Color>
        <Color x:Key="BodyText">#111827</Color>
        <Color x:Key="Divider">#E5E7EB</Color>
        <Color x:Key="Chip">#F3F4F6</Color>

        <Style TargetType="Label">
            <Setter Property="TextColor" Value="{StaticResource BodyText}" />
        </Style>

        <Style TargetType="Picker">
            <Setter Property="TextColor" Value="Black" />
            <Setter Property="TitleColor" Value="#6B7280" />
            <Setter Property="BackgroundColor" Value="White" />
        </Style>

        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="TextColor" Value="{StaticResource BodyText}" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="HorizontalOptions" Value="Start" />
        </Style>

        <Style x:Key="TitleLabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontAttributes" Value="Bold" />
        </Style>

        <Style x:Key="FieldLabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="TextColor" Value="#6B7280" />
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#2563EB" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Padding" Value="14,10" />
        </Style>

        <Style x:Key="CardStyle" TargetType="Frame">
            <Setter Property="HasShadow" Value="False" />
            <Setter Property="CornerRadius" Value="14" />
            <Setter Property="Padding" Value="14" />
            <Setter Property="BackgroundColor" Value="White" />
            <Setter Property="BorderColor" Value="#E5E7EB" />
        </Style>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*" BackgroundColor="White">

        <!-- TOPBAR -->
        <Grid BackgroundColor="{StaticResource TopbarColor}" Padding="12,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button x:Name="BtnOpen"
                    Grid.Column="0"
                    Text="☰"
                    FontSize="22"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource HeaderTextOnDark}"
                    Clicked="OpenDrawer_Clicked" />

            <Label Grid.Column="1"
                   Text="Modifier incident"
                   HorizontalTextAlignment="Center"
                   VerticalOptions="Center"
                   FontAttributes="Bold"
                   TextColor="{StaticResource HeaderTextOnDark}" />

            <Label Grid.Column="2"
                   Text="• • •"
                   TextColor="{StaticResource HeaderTextOnDark}"
                   VerticalOptions="Center" />
        </Grid>

        <!-- CONTENU -->
        <Grid Grid.Row="1">
            <ScrollView>
                <VerticalStackLayout Padding="16" Spacing="16">

                    <Label Text="Modifier les informations"
                           Style="{StaticResource TitleLabelStyle}" />

                    <Frame Style="{StaticResource CardStyle}">
                        <VerticalStackLayout Spacing="10">

                            <Label Text="Description" Style="{StaticResource FieldLabelStyle}" />
                            <Editor Text="{Binding Description}"
                                    AutoSize="TextChanges"
                                    Placeholder="Mettre à jour la description" />

                            <Label Text="Type d'incident" Style="{StaticResource FieldLabelStyle}" />
                            <Entry Text="{Binding TypeIncident}"
                                   Placeholder="panne, fuite, ..." />

                            <Label Text="Urgence" Style="{StaticResource FieldLabelStyle}" />
                            <Picker ItemsSource="{Binding Urgences}"
                                    SelectedItem="{Binding SelectedUrgence}"
                                    Title="Sélectionner l'urgence" />

                            <Label Text="Lot" Style="{StaticResource FieldLabelStyle}" />
                            <Picker ItemsSource="{Binding Lots}"
                                    ItemDisplayBinding="{Binding NumeroLot}"
                                    SelectedItem="{Binding SelectedLot}"
                                    Title="Sélectionner un lot" />

                            <Button Text="Enregistrer les modifications"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Command="{Binding SaveCommand}" />
                        </VerticalStackLayout>
                    </Frame>

                </VerticalStackLayout>
            </ScrollView>
        </Grid>

        <!-- OVERLAY + DRAWER (idem) -->
        <BoxView x:Name="Backdrop"
                 Grid.RowSpan="2"
                 BackgroundColor="#66000000"
                 Opacity="0"
                 InputTransparent="True">
            <BoxView.GestureRecognizers>
                <TapGestureRecognizer Tapped="Backdrop_Tapped" />
            </BoxView.GestureRecognizers>
        </BoxView>

        <Border x:Name="Drawer"
                Grid.RowSpan="2"
                BackgroundColor="White"
                StrokeThickness="0"
                TranslationX="-1000"
                Padding="0">
            <Grid RowDefinitions="Auto,*">
                <Grid BackgroundColor="{StaticResource TopbarColor}" Padding="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Label Text="Navigation"
                           TextColor="{StaticResource HeaderTextOnDark}"
                           FontAttributes="Bold"
                           VerticalOptions="Center" />
                    <Button Grid.Column="1"
                            Text="×"
                            FontSize="22"
                            BackgroundColor="Transparent"
                            TextColor="{StaticResource HeaderTextOnDark}"
                            Clicked="CloseDrawer_Clicked" />
                </Grid>

                <ScrollView Grid.Row="1" BackgroundColor="White">
                    <VerticalStackLayout Padding="16" Spacing="10">
                        <Label Text="Tableau de bord" FontAttributes="Bold" />
                        <Button Text="Dashboard" Style="{StaticResource MenuButtonStyle}" CommandParameter="//syndic-dashboard" Clicked="OnMenuItemClicked" />
                        <Button Text="Dashboard Affectations" Style="{StaticResource MenuButtonStyle}" CommandParameter="//affectation-dashboard" Clicked="OnMenuItemClicked" />
                        <Button Text="Mon espace (copro)" Style="{StaticResource MenuButtonStyle}" CommandParameter="//affectation-user-dashboard" Clicked="OnMenuItemClicked" />
                        <Button Text="Gardien / Maintenance" Style="{StaticResource MenuButtonStyle}" CommandParameter="//affectation-maintenance-dashboard" Clicked="OnMenuItemClicked" />
                        <Button Text="Statistiques affectations" Style="{StaticResource MenuButtonStyle}" CommandParameter="//affectation-analytics" Clicked="OnMenuItemClicked" />

                        <BoxView HeightRequest="1" BackgroundColor="{StaticResource Divider}" />
                        <Label Text="Incidents &amp; Interventions" FontAttributes="Bold" />
                        <Button Text="Incidents" Style="{StaticResource MenuButtonStyle}" CommandParameter="//incidents" Clicked="OnMenuItemClicked" />
                        <Button Text="Interventions" Style="{StaticResource MenuButtonStyle}" CommandParameter="//interventions" Clicked="OnMenuItemClicked" />
                        <Button Text="Devis de travaux" Style="{StaticResource MenuButtonStyle}" CommandParameter="//devis-travaux" Clicked="OnMenuItemClicked" />

                        <BoxView HeightRequest="16" Opacity="0" />
                        <Button Text="Déconnexion" Style="{StaticResource MenuButtonStyle}" CommandParameter="//login" Clicked="OnMenuItemClicked" />
                    </VerticalStackLayout>
                </ScrollView>
            </Grid>
        </Border>
    </Grid>
</ContentPage>
