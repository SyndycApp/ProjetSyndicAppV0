<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SyndicApp.Mobile.Views.Incidents.DevisTravauxDetailsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:SyndicApp.Mobile.ViewModels.Incidents"
    x:DataType="vm:DevisTravauxDetailsViewModel"
    x:Name="RootPage"
    Title="Détails devis"
    BackgroundColor="White"
    Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <Color x:Key="TopbarColor">#2563EB</Color>
        <Color x:Key="HeaderTextOnDark">#FFFFFF</Color>
        <Color x:Key="BodyText">#111827</Color>
        <Color x:Key="Divider">#E5E7EB</Color>
        <Color x:Key="Chip">#F3F4F6</Color>

        <Style TargetType="Label">
            <Setter Property="TextColor" Value="{StaticResource BodyText}" />
        </Style>

        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="TextColor" Value="{StaticResource BodyText}" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="HorizontalOptions" Value="Start" />
        </Style>

        <Style x:Key="TitleLabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontAttributes" Value="Bold" />
        </Style>

        <Style x:Key="SectionTitleStyle" TargetType="Label">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontAttributes" Value="Bold" />
        </Style>

        <Style x:Key="FieldLabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="TextColor" Value="#6B7280" />
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#2563EB" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Padding" Value="14,10" />
        </Style>

        <Style x:Key="OutlineButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="TextColor" Value="#2563EB" />
            <Setter Property="BorderColor" Value="#2563EB" />
            <Setter Property="BorderWidth" Value="1" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Padding" Value="14,10" />
        </Style>

        <Style x:Key="CardStyle" TargetType="Frame">
            <Setter Property="HasShadow" Value="False" />
            <Setter Property="CornerRadius" Value="14" />
            <Setter Property="Padding" Value="14" />
            <Setter Property="BackgroundColor" Value="White" />
            <Setter Property="BorderColor" Value="#E5E7EB" />
        </Style>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*" BackgroundColor="White">

        <!-- TOPBAR -->
        <Grid BackgroundColor="{StaticResource TopbarColor}" Padding="12,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Text="←"
                    FontSize="22"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource HeaderTextOnDark}"
                    Clicked="BackButton_Clicked" />

            <Label Grid.Column="1"
                   Text="Détails du devis"
                   HorizontalTextAlignment="Center"
                   VerticalOptions="Center"
                   FontAttributes="Bold"
                   TextColor="{StaticResource HeaderTextOnDark}" />

            <Button x:Name="BtnOpen"
                    Grid.Column="2"
                    Text="☰"
                    FontSize="22"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource HeaderTextOnDark}"
                    Clicked="OpenDrawer_Clicked" />
        </Grid>

        <!-- CONTENU -->
        <Grid Grid.Row="1">
            <ScrollView>
                <VerticalStackLayout Padding="16" Spacing="14">

                    <!-- Bloc devis -->
                    <Frame Style="{StaticResource CardStyle}">
                        <VerticalStackLayout Spacing="6">
                            <Label Text="Informations devis" Style="{StaticResource SectionTitleStyle}" />

                            <Label Text="{Binding Titre}" FontAttributes="Bold" FontSize="16" />

                            <Label Text="{Binding Description}"
                                   FontSize="13"
                                   Opacity="0.9" />

                            <Grid ColumnDefinitions="*,*"
                                  RowDefinitions="Auto,Auto,Auto"
                                  Margin="0,8,0,0">

                                <Label Grid.Row="0" Grid.Column="0" Style="{StaticResource FieldLabelStyle}" Text="Montant HT" />
                                <Label Grid.Row="0" Grid.Column="1" HorizontalTextAlignment="End"
                                       Text="{Binding MontantHT, StringFormat='{}{0:N2}'}" />

                                <Label Grid.Row="1" Grid.Column="0" Style="{StaticResource FieldLabelStyle}" Text="TVA (%)" />
                                <Label Grid.Row="1" Grid.Column="1" HorizontalTextAlignment="End"
                                       Text="{Binding TauxTVA, StringFormat='{}{0:N2}'}" />

                                <Label Grid.Row="2" Grid.Column="0" Style="{StaticResource FieldLabelStyle}" Text="Montant TTC" />
                                <Label Grid.Row="2" Grid.Column="1" HorizontalTextAlignment="End"
                                       Text="{Binding MontantTTC, StringFormat='{}{0:N2}'}" />
                            </Grid>

                            <Grid ColumnDefinitions="*,*"
                                  Margin="0,8,0,0">
                                <Label Grid.Column="0" Style="{StaticResource FieldLabelStyle}" Text="Statut" />
                                <Border Grid.Column="1"
                                        HorizontalOptions="End"
                                        BackgroundColor="{StaticResource Chip}"
                                        Padding="8,2">
                                    <Label Text="{Binding Statut}" FontSize="12" />
                                </Border>
                            </Grid>

                            <Label Margin="0,4,0,0"
                                   Style="{StaticResource FieldLabelStyle}"
                                   Text="{Binding DateEmission, StringFormat='Émis le {0:dd/MM/yyyy}'}" />
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Bloc résidence -->
                    <Frame Style="{StaticResource CardStyle}">
                        <VerticalStackLayout Spacing="6">
                            <Label Text="Résidence" Style="{StaticResource SectionTitleStyle}" />

                            <Label Text="{Binding ResidenceNom}"
                                   FontAttributes="Bold"
                                   FontSize="15" />

                            <Label Text="{Binding ResidenceAdresseComplete}"
                                   FontSize="13"
                                   Opacity="0.9" />
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Bloc incident -->
                    <Frame Style="{StaticResource CardStyle}">
                        <VerticalStackLayout Spacing="6">
                            <Label Text="Incident lié" Style="{StaticResource SectionTitleStyle}" />

                            <Label Text="{Binding IncidentTitre}"
                                   FontAttributes="Bold"
                                   FontSize="15" />

                            <Label Text="{Binding IncidentDescription}"
                                   FontSize="13"
                                   Opacity="0.9" />

                            <Grid ColumnDefinitions="*,*"
                                  RowDefinitions="Auto,Auto,Auto"
                                  Margin="0,8,0,0">

                                <Label Grid.Row="0" Grid.Column="0" Style="{StaticResource FieldLabelStyle}" Text="Type" />
                                <Label Grid.Row="0" Grid.Column="1" HorizontalTextAlignment="End"
                                       Text="{Binding IncidentType}" />

                                <Label Grid.Row="1" Grid.Column="0" Style="{StaticResource FieldLabelStyle}" Text="Urgence" />
                                <Label Grid.Row="1" Grid.Column="1" HorizontalTextAlignment="End"
                                       Text="{Binding IncidentUrgence}" />

                                <Label Grid.Row="2" Grid.Column="0" Style="{StaticResource FieldLabelStyle}" Text="Statut" />
                                <Label Grid.Row="2" Grid.Column="1" HorizontalTextAlignment="End"
                                       Text="{Binding IncidentStatut}" />
                            </Grid>

                            <Label Margin="0,4,0,0"
                                   Style="{StaticResource FieldLabelStyle}"
                                   Text="{Binding IncidentDateDeclaration, StringFormat='Déclaré le {0:dd/MM/yyyy}'}" />

                            <Label Margin="0,2,0,0"
                                   Style="{StaticResource FieldLabelStyle}"
                                   Text="{Binding IncidentDeclarantNom, StringFormat='Par : {0}'}" />
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Bloc décision -->
                    <Frame Style="{StaticResource CardStyle}">
                        <VerticalStackLayout Spacing="6">
                            <Label Text="Décision" Style="{StaticResource SectionTitleStyle}" />

                            <Label Style="{StaticResource FieldLabelStyle}"
                                   Text="{Binding StatutDecision, StringFormat='Statut décision : {0}'}" />

                            <Label Style="{StaticResource FieldLabelStyle}"
                                   Text="{Binding DateDecision, StringFormat='Décidé le : {0:dd/MM/yyyy HH:mm}'}" />

                            <Label Text="{Binding CommentaireDecision}"
                                   FontSize="13"
                                   Opacity="0.9" />

                            <Button Text="Prendre une décision"
        Margin="0,8,0,0"
        Style="{StaticResource PrimaryButtonStyle}"
        IsVisible="{Binding IsSyndic}"
        Command="{Binding GoToDecisionCommand}" />
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Bouton supprimer -->
                    <Button Text="Supprimer ce devis"
                            Margin="0,4,0,12"
                            BackgroundColor="#DC2626"
                            TextColor="White"
                            CornerRadius="10"
                            Padding="14,10"
                            Command="{Binding DeleteCommand}"
                            IsVisible="{Binding IsSyndic}" />


                </VerticalStackLayout>
            </ScrollView>
        </Grid>

        <!-- OVERLAY -->
        <BoxView x:Name="Backdrop"
                 Grid.RowSpan="2"
                 BackgroundColor="#66000000"
                 Opacity="0"
                 InputTransparent="True">
            <BoxView.GestureRecognizers>
                <TapGestureRecognizer Tapped="Backdrop_Tapped" />
            </BoxView.GestureRecognizers>
        </BoxView>

        <!-- DRAWER -->
        <Border x:Name="Drawer"
                Grid.RowSpan="2"
                BackgroundColor="White"
                StrokeThickness="0"
                TranslationX="-1000"
                Padding="0">
            <Grid RowDefinitions="Auto,*">

                <Grid BackgroundColor="{StaticResource TopbarColor}" Padding="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Label Text="Navigation"
                           TextColor="{StaticResource HeaderTextOnDark}"
                           FontAttributes="Bold"
                           VerticalOptions="Center" />

                    <Button Grid.Column="1"
                            Text="×"
                            FontSize="22"
                            BackgroundColor="Transparent"
                            TextColor="{StaticResource HeaderTextOnDark}"
                            Clicked="CloseDrawer_Clicked" />

                </Grid>

                <ScrollView Grid.Row="1" BackgroundColor="White">
                    <VerticalStackLayout Padding="16" Spacing="10">

                        <Label Text="Tableau de bord" FontAttributes="Bold" />
                        <Button Text="Dashboard" Style="{StaticResource MenuButtonStyle}" CommandParameter="//syndic-dashboard" Clicked="OnMenuItemClicked" />
                        <Button Text="Dashboard Affectations" Style="{StaticResource MenuButtonStyle}" CommandParameter="//affectation-dashboard" Clicked="OnMenuItemClicked" />
                        <Button Text="Mon espace (copro)" Style="{StaticResource MenuButtonStyle}" CommandParameter="//affectation-user-dashboard" Clicked="OnMenuItemClicked" />
                        <Button Text="Gardien / Maintenance" Style="{StaticResource MenuButtonStyle}" CommandParameter="//affectation-maintenance-dashboard" Clicked="OnMenuItemClicked" />
                        <Button Text="Statistiques affectations" Style="{StaticResource MenuButtonStyle}" CommandParameter="//affectation-analytics" Clicked="OnMenuItemClicked" />

                        <BoxView HeightRequest="1" BackgroundColor="{StaticResource Divider}" />
                        <Label Text="Résidences &amp; Lots" FontAttributes="Bold" />
                        <Button Text="Résidences" Style="{StaticResource MenuButtonStyle}" CommandParameter="//residences" Clicked="OnMenuItemClicked" />
                        <Button Text="Bâtiments" Style="{StaticResource MenuButtonStyle}" CommandParameter="//batiments" Clicked="OnMenuItemClicked" />
                        <Button Text="Lots" Style="{StaticResource MenuButtonStyle}" CommandParameter="//lots" Clicked="OnMenuItemClicked" />
                        <Button Text="Affectations des lots" Style="{StaticResource MenuButtonStyle}" CommandParameter="//affectation-lots" Clicked="OnMenuItemClicked" />
                        <Button Text="Historique affectations" Style="{StaticResource MenuButtonStyle}" CommandParameter="//affectation-historique" Clicked="OnMenuItemClicked" />

                        <BoxView HeightRequest="1" BackgroundColor="{StaticResource Divider}" />
                        <Label Text="Finances" FontAttributes="Bold" />
                        <Button Text="Appels de fonds" Style="{StaticResource MenuButtonStyle}" CommandParameter="//appels" Clicked="OnMenuItemClicked" />
                        <Button Text="Paiements" Style="{StaticResource MenuButtonStyle}" CommandParameter="//paiements" Clicked="OnMenuItemClicked" />
                        <Button Text="Charges" Style="{StaticResource MenuButtonStyle}" CommandParameter="//charges" Clicked="OnMenuItemClicked" />

                        <BoxView HeightRequest="1" BackgroundColor="{StaticResource Divider}" />
                        <Label Text="Incidents &amp; Interventions" FontAttributes="Bold" />
                        <Button Text="Incidents" Style="{StaticResource MenuButtonStyle}" CommandParameter="//incidents" Clicked="OnMenuItemClicked" />
                        <Button Text="Interventions" Style="{StaticResource MenuButtonStyle}" CommandParameter="//interventions" Clicked="OnMenuItemClicked" />
                        <Button Text="Devis de travaux" Style="{StaticResource MenuButtonStyle}" CommandParameter="//devis-travaux" Clicked="OnMenuItemClicked" />

                        <BoxView HeightRequest="16" Opacity="0" />
                        <Button Text="Déconnexion" Style="{StaticResource MenuButtonStyle}" CommandParameter="//login" Clicked="OnMenuItemClicked" />
                    </VerticalStackLayout>
                </ScrollView>
            </Grid>
        </Border>
    </Grid>
</ContentPage>
