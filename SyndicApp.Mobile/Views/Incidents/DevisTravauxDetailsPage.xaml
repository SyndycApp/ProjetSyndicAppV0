<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SyndicApp.Mobile.Views.Incidents.DevisTravauxDetailsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:SyndicApp.Mobile.ViewModels.Incidents"
    xmlns:layouts="clr-namespace:SyndicApp.Mobile.Views.Layout"
    x:DataType="vm:DevisTravauxDetailsViewModel"
    x:Name="RootPage"
    Title="Détails devis"
    BackgroundColor="White"
    Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <Color x:Key="TopbarColor">#2563EB</Color>
        <Color x:Key="HeaderTextOnDark">#FFFFFF</Color>
        <Color x:Key="BodyText">#111827</Color>
        <Color x:Key="Divider">#E5E7EB</Color>
        <Color x:Key="Chip">#F3F4F6</Color>

        <Style TargetType="Label">
            <Setter Property="TextColor" Value="{StaticResource BodyText}" />
        </Style>

        <Style x:Key="TitleLabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontAttributes" Value="Bold" />
        </Style>

        <Style x:Key="SectionTitleStyle" TargetType="Label">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontAttributes" Value="Bold" />
        </Style>

        <Style x:Key="FieldLabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="TextColor" Value="#6B7280" />
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#2563EB" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Padding" Value="14,10" />
        </Style>

        <Style x:Key="OutlineButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="TextColor" Value="#2563EB" />
            <Setter Property="BorderColor" Value="#2563EB" />
            <Setter Property="BorderWidth" Value="1" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Padding" Value="14,10" />
        </Style>

        <Style x:Key="CardStyle" TargetType="Frame">
            <Setter Property="HasShadow" Value="False" />
            <Setter Property="CornerRadius" Value="14" />
            <Setter Property="Padding" Value="14" />
            <Setter Property="BackgroundColor" Value="White" />
            <Setter Property="BorderColor" Value="#E5E7EB" />
        </Style>
    </ContentPage.Resources>

    <layouts:RoleDrawerLayout>
        <layouts:RoleDrawerLayout.MainContent>

            <Grid RowDefinitions="Auto,*" BackgroundColor="White">

                <!-- Header local avec bouton retour -->
                <Grid Padding="12,8"
                      BackgroundColor="White"
                      ColumnDefinitions="Auto,*">
                    <Button Grid.Column="0"
                            Text="←"
                            FontSize="22"
                            BackgroundColor="Transparent"
                            TextColor="{StaticResource BodyText}"
                            Clicked="BackButton_Clicked" />

                    <Label Grid.Column="1"
                           Text="Détails du devis"
                           HorizontalTextAlignment="Center"
                           VerticalOptions="Center"
                           FontAttributes="Bold" />
                </Grid>

                <!-- Contenu -->
                <Grid Grid.Row="1">
                    <ScrollView>
                        <VerticalStackLayout Padding="16" Spacing="14">

                            <!-- Bloc devis -->
                            <Frame Style="{StaticResource CardStyle}">
                                <VerticalStackLayout Spacing="6">
                                    <Label Text="Informations devis" Style="{StaticResource SectionTitleStyle}" />

                                    <Label Text="{Binding Titre}" FontAttributes="Bold" FontSize="16" />

                                    <Label Text="{Binding Description}"
                                           FontSize="13"
                                           Opacity="0.9" />

                                    <Grid ColumnDefinitions="*,*"
                                          RowDefinitions="Auto,Auto,Auto"
                                          Margin="0,8,0,0">

                                        <Label Grid.Row="0" Grid.Column="0"
                                               Style="{StaticResource FieldLabelStyle}"
                                               Text="Montant HT" />
                                        <Label Grid.Row="0" Grid.Column="1"
                                               HorizontalTextAlignment="End"
                                               Text="{Binding MontantHT, StringFormat='{}{0:N2}'}" />

                                        <Label Grid.Row="1" Grid.Column="0"
                                               Style="{StaticResource FieldLabelStyle}"
                                               Text="TVA (%)" />
                                        <Label Grid.Row="1" Grid.Column="1"
                                               HorizontalTextAlignment="End"
                                               Text="{Binding TauxTVA, StringFormat='{}{0:N2}'}" />

                                        <Label Grid.Row="2" Grid.Column="0"
                                               Style="{StaticResource FieldLabelStyle}"
                                               Text="Montant TTC" />
                                        <Label Grid.Row="2" Grid.Column="1"
                                               HorizontalTextAlignment="End"
                                               Text="{Binding MontantTTC, StringFormat='{}{0:N2}'}" />
                                    </Grid>

                                    <Grid ColumnDefinitions="*,*"
                                          Margin="0,8,0,0">
                                        <Label Grid.Column="0"
                                               Style="{StaticResource FieldLabelStyle}"
                                               Text="Statut" />
                                        <Border Grid.Column="1"
                                                HorizontalOptions="End"
                                                BackgroundColor="{StaticResource Chip}"
                                                Padding="8,2">
                                            <Label Text="{Binding Statut}" FontSize="12" />
                                        </Border>
                                    </Grid>

                                    <Label Margin="0,4,0,0"
                                           Style="{StaticResource FieldLabelStyle}"
                                           Text="{Binding DateEmission, StringFormat='Émis le {0:dd/MM/yyyy}'}" />
                                </VerticalStackLayout>
                            </Frame>

                            <!-- Bloc résidence -->
                            <Frame Style="{StaticResource CardStyle}">
                                <VerticalStackLayout Spacing="6">
                                    <Label Text="Résidence" Style="{StaticResource SectionTitleStyle}" />

                                    <Label Text="{Binding ResidenceNom}"
                                           FontAttributes="Bold"
                                           FontSize="15" />

                                    <Label Text="{Binding ResidenceAdresseComplete}"
                                           FontSize="13"
                                           Opacity="0.9" />
                                </VerticalStackLayout>
                            </Frame>

                            <!-- Bloc incident -->
                            <Frame Style="{StaticResource CardStyle}">
                                <VerticalStackLayout Spacing="6">
                                    <Label Text="Incident lié" Style="{StaticResource SectionTitleStyle}" />

                                    <Label Text="{Binding IncidentTitre}"
                                           FontAttributes="Bold"
                                           FontSize="15" />

                                    <Label Text="{Binding IncidentDescription}"
                                           FontSize="13"
                                           Opacity="0.9" />

                                    <Grid ColumnDefinitions="*,*"
                                          RowDefinitions="Auto,Auto,Auto"
                                          Margin="0,8,0,0">

                                        <Label Grid.Row="0" Grid.Column="0"
                                               Style="{StaticResource FieldLabelStyle}"
                                               Text="Type" />
                                        <Label Grid.Row="0" Grid.Column="1"
                                               HorizontalTextAlignment="End"
                                               Text="{Binding IncidentType}" />

                                        <Label Grid.Row="1" Grid.Column="0"
                                               Style="{StaticResource FieldLabelStyle}"
                                               Text="Urgence" />
                                        <Label Grid.Row="1" Grid.Column="1"
                                               HorizontalTextAlignment="End"
                                               Text="{Binding IncidentUrgence}" />

                                        <Label Grid.Row="2" Grid.Column="0"
                                               Style="{StaticResource FieldLabelStyle}"
                                               Text="Statut" />
                                        <Label Grid.Row="2" Grid.Column="1"
                                               HorizontalTextAlignment="End"
                                               Text="{Binding IncidentStatut}" />
                                    </Grid>

                                    <Label Margin="0,4,0,0"
                                           Style="{StaticResource FieldLabelStyle}"
                                           Text="{Binding IncidentDateDeclaration, StringFormat='Déclaré le {0:dd/MM/yyyy}'}" />

                                    <Label Margin="0,2,0,0"
                                           Style="{StaticResource FieldLabelStyle}"
                                           Text="{Binding IncidentDeclarantNom, StringFormat='Par : {0}'}" />
                                </VerticalStackLayout>
                            </Frame>

                            <!-- Bloc décision -->
                            <Frame Style="{StaticResource CardStyle}">
                                <VerticalStackLayout Spacing="6">
                                    <Label Text="Décision" Style="{StaticResource SectionTitleStyle}" />

                                    <Label Style="{StaticResource FieldLabelStyle}"
                                           Text="{Binding StatutDecision, StringFormat='Statut décision : {0}'}" />

                                    <Label Style="{StaticResource FieldLabelStyle}"
                                           Text="{Binding DateDecision, StringFormat='Décidé le : {0:dd/MM/yyyy HH:mm}'}" />

                                    <Label Text="{Binding CommentaireDecision}"
                                           FontSize="13"
                                           Opacity="0.9" />

                                    <Button Text="Prendre une décision"
                                            Margin="0,8,0,0"
                                            Style="{StaticResource PrimaryButtonStyle}"
                                            IsVisible="{Binding IsSyndic}"
                                            Command="{Binding GoToDecisionCommand}" />
                                </VerticalStackLayout>
                            </Frame>

                            <!-- Bouton supprimer -->
                            <Button Text="Supprimer ce devis"
                                    Margin="0,4,0,12"
                                    BackgroundColor="#DC2626"
                                    TextColor="White"
                                    CornerRadius="10"
                                    Padding="14,10"
                                    Command="{Binding DeleteCommand}"
                                    IsVisible="{Binding IsSyndic}" />

                        </VerticalStackLayout>
                    </ScrollView>
                </Grid>
            </Grid>

        </layouts:RoleDrawerLayout.MainContent>
    </layouts:RoleDrawerLayout>
</ContentPage>
