<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SyndicApp.Mobile.Views.Incidents.IncidentDetailsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:SyndicApp.Mobile.ViewModels.Incidents"
    xmlns:models="clr-namespace:SyndicApp.Mobile.Models"
    xmlns:layout="clr-namespace:SyndicApp.Mobile.Views.Layout"
    x:DataType="vm:IncidentDetailsViewModel"
    x:Name="RootPage"
    Title="Détails incident"
    BackgroundColor="White"
    Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <Color x:Key="TopbarColor">#2563EB</Color>
        <Color x:Key="HeaderTextOnDark">#FFFFFF</Color>
        <Color x:Key="BodyText">#111827</Color>
        <Color x:Key="Divider">#E5E7EB</Color>
        <Color x:Key="Chip">#F3F4F6</Color>

        <Style TargetType="Label">
            <Setter Property="TextColor" Value="{StaticResource BodyText}" />
        </Style>

        <Style x:Key="TitleLabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontAttributes" Value="Bold" />
        </Style>

        <Style x:Key="FieldLabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="TextColor" Value="#6B7280" />
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#2563EB" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Padding" Value="14,10" />
        </Style>

        <Style x:Key="OutlineButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="TextColor" Value="#2563EB" />
            <Setter Property="BorderColor" Value="#2563EB" />
            <Setter Property="BorderWidth" Value="1" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Padding" Value="14,10" />
        </Style>

        <Style x:Key="CardStyle" TargetType="Frame">
            <Setter Property="HasShadow" Value="False" />
            <Setter Property="CornerRadius" Value="14" />
            <Setter Property="Padding" Value="14" />
            <Setter Property="BackgroundColor" Value="White" />
            <Setter Property="BorderColor" Value="#E5E7EB" />
        </Style>
    </ContentPage.Resources>

    <layout:RoleDrawerLayout x:Name="DrawerLayout">
        <layout:RoleDrawerLayout.MainContent>

            <ScrollView>
                <VerticalStackLayout Padding="16" Spacing="16">

                    <Label Text="Résumé de l'incident"
                           Style="{StaticResource TitleLabelStyle}" />

                    <!-- Titre / Type / Description -->
                    <Frame Style="{StaticResource CardStyle}">
                        <VerticalStackLayout Spacing="6">
                            <Label Text="{Binding Titre}" FontAttributes="Bold" FontSize="16" />
                            <Label Text="{Binding TypeIncident, StringFormat='Type : {0}'}"
                                   FontSize="13" />
                            <Label Text="Description"
                                   Style="{StaticResource FieldLabelStyle}" />
                            <Label Text="{Binding Description}"
                                   FontSize="13"
                                   LineBreakMode="WordWrap" />
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Statut / Urgence -->
                    <Frame Style="{StaticResource CardStyle}">
                        <VerticalStackLayout Spacing="6">
                            <Label Text="Statut &amp; Urgence" FontAttributes="Bold" />
                            <Grid ColumnDefinitions="*,*">
                                <Label Grid.Column="0"
                                       Text="{Binding Statut, StringFormat='Statut : {0}'}" />
                                <Label Grid.Column="1"
                                       Text="{Binding Urgence, StringFormat='Urgence : {0}'}"
                                       HorizontalTextAlignment="End" />
                            </Grid>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Déclarant + date -->
                    <Frame Style="{StaticResource CardStyle}">
                        <VerticalStackLayout Spacing="6">
                            <Label Text="Déclaration" FontAttributes="Bold" />

                            <Label Text="{Binding DeclarantNom, StringFormat='Déclaré par : {0}'}"
                                   FontSize="13" />

                            <Label Text="{Binding DateDeclaration, StringFormat='Le {0:dd/MM/yyyy HH:mm}'}"
                                   FontSize="13"
                                   Opacity="0.8" />
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Résidence / Lot -->
                    <Frame Style="{StaticResource CardStyle}">
                        <VerticalStackLayout Spacing="6">
                            <Label Text="Localisation" FontAttributes="Bold" />

                            <Label Text="{Binding ResidenceNom, StringFormat='Résidence : {0}'}"
                                   FontSize="14" />

                            <Label Text="{Binding ResidenceAdresseComplete}"
                                   FontSize="13"
                                   TextColor="#6B7280"
                                   LineBreakMode="WordWrap" />

                            <Label Text="{Binding LotNumero, StringFormat='Lot : {0}'}"
                                   FontSize="13" />
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Historique -->
                    <Frame Style="{StaticResource CardStyle}">
                        <VerticalStackLayout Spacing="6">
                            <Label Text="Historique" FontAttributes="Bold" />

                            <CollectionView ItemsSource="{Binding Historique}"
                                            SelectionMode="None">
                                <CollectionView.EmptyView>
                                    <Label Text="Aucun historique disponible."
                                           FontSize="12"
                                           Opacity="0.6"
                                           HorizontalTextAlignment="Center" />
                                </CollectionView.EmptyView>

                                <CollectionView.ItemTemplate>
                                    <DataTemplate x:DataType="models:IncidentHistoriqueItem">
                                        <Grid RowDefinitions="Auto,Auto"
                                              ColumnDefinitions="*,Auto"
                                              Margin="0,4,0,4">
                                            <Label Grid.Row="0"
                                                   Grid.Column="0"
                                                   Text="{Binding Action}"
                                                   FontSize="13" />
                                            <Label Grid.Row="0"
                                                   Grid.Column="1"
                                                   Text="{Binding DateAction, StringFormat='{0:dd/MM/yyyy HH:mm}'}"
                                                   FontSize="11"
                                                   Opacity="0.7"
                                                   HorizontalTextAlignment="End" />
                                            <Label Grid.Row="1"
                                                   Grid.Column="0"
                                                   Grid.ColumnSpan="2"
                                                   Text="{Binding AuteurNom, StringFormat='Par : {0}'}"
                                                   FontSize="11"
                                                   Opacity="0.7" />
                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Boutons d'actions -->
                    <VerticalStackLayout Spacing="10">
                        <Button x:Name="BtnChangeStatus"
                                Text="Modifier le statut"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Command="{Binding GoToChangeStatusCommand}" />

                        <Button x:Name="BtnEdit"
                                Text="Modifier l'incident"
                                Style="{StaticResource OutlineButtonStyle}"
                                Command="{Binding GoToEditCommand}" />

                        <Button x:Name="BtnDelete"
                                Text="Supprimer l'incident"
                                BackgroundColor="#DC2626"
                                TextColor="White"
                                CornerRadius="10"
                                Padding="14,10"
                                Command="{Binding DeleteCommand}" />
                    </VerticalStackLayout>

                    <Button Text="Retour"
                            Style="{StaticResource OutlineButtonStyle}"
                            Command="{Binding GoBackCommand}" />

                </VerticalStackLayout>
            </ScrollView>

        </layout:RoleDrawerLayout.MainContent>
    </layout:RoleDrawerLayout>
</ContentPage>
