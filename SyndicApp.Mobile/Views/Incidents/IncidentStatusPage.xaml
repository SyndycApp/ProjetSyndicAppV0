<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SyndicApp.Mobile.Views.Incidents.IncidentStatusPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:SyndicApp.Mobile.ViewModels.Incidents"
    xmlns:layout="clr-namespace:SyndicApp.Mobile.Views.Layout"
    x:DataType="vm:IncidentStatusViewModel"
    x:Name="RootPage"
    Title="Modifier le statut"
    BackgroundColor="White"
    Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <Color x:Key="TopbarColor">#2563EB</Color>
        <Color x:Key="HeaderTextOnDark">#FFFFFF</Color>
        <Color x:Key="BodyText">#111827</Color>
        <Color x:Key="Divider">#E5E7EB</Color>
        <Color x:Key="Chip">#F3F4F6</Color>

        <Style TargetType="Label">
            <Setter Property="TextColor" Value="{StaticResource BodyText}" />
        </Style>

        <Style TargetType="Picker">
            <Setter Property="TextColor" Value="Black" />
            <Setter Property="TitleColor" Value="#6B7280" />
            <Setter Property="BackgroundColor" Value="White" />
        </Style>

        <Style x:Key="TitleLabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontAttributes" Value="Bold" />
        </Style>

        <Style x:Key="FieldLabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="TextColor" Value="#6B7280" />
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#2563EB" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Padding" Value="14,10" />
        </Style>

        <Style x:Key="CardStyle" TargetType="Frame">
            <Setter Property="HasShadow" Value="False" />
            <Setter Property="CornerRadius" Value="14" />
            <Setter Property="Padding" Value="14" />
            <Setter Property="BackgroundColor" Value="White" />
            <Setter Property="BorderColor" Value="#E5E7EB" />
        </Style>
    </ContentPage.Resources>

    <layout:RoleDrawerLayout x:Name="DrawerLayout">
        <layout:RoleDrawerLayout.MainContent>

            <ScrollView>
                <VerticalStackLayout Padding="16" Spacing="16">

                    <Label Text="Mise à jour du statut"
                           Style="{StaticResource TitleLabelStyle}" />

                    <Frame Style="{StaticResource CardStyle}">
                        <VerticalStackLayout Spacing="10">

                            <Label Text="Nouveau statut"
                                   Style="{StaticResource FieldLabelStyle}" />
                            <Picker ItemsSource="{Binding Statuts}"
                                    SelectedItem="{Binding SelectedStatut}"
                                    Title="Sélectionner un statut" />

                            <Label Text="Auteur"
                                   Style="{StaticResource FieldLabelStyle}" />
                            <Label Text="{Binding AuteurNom}"
                                   FontSize="13" />

                            <Label Text="Commentaire"
                                   Style="{StaticResource FieldLabelStyle}" />
                            <Editor Text="{Binding Commentaire}"
                                    AutoSize="TextChanges"
                                    Placeholder="Commentaire sur la mise à jour"
                                    TextColor="{StaticResource BodyText}"
                                    BackgroundColor="White"
                                    PlaceholderColor="#6B7280" />

                            <Button Text="Enregistrer le statut"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Command="{Binding SaveCommand}" />
                        </VerticalStackLayout>
                    </Frame>

                </VerticalStackLayout>
            </ScrollView>

        </layout:RoleDrawerLayout.MainContent>
    </layout:RoleDrawerLayout>
</ContentPage>
