<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SyndicApp.Mobile.Views.Batiments.BatimentDetailsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:layout="clr-namespace:SyndicApp.Mobile.Views.Layout"
    Shell.NavBarIsVisible="False"
    BackgroundColor="White">

    <layout:RoleDrawerLayout>
        <layout:RoleDrawerLayout.MainContent>

            <ScrollView>
                <VerticalStackLayout Padding="16" Spacing="20">

                    <!-- TITRE -->
                    <Label Text="{Binding Batiment.Nom}"
                           FontSize="26"
                           FontAttributes="Bold"
                           TextColor="#111827" />

                    <Label Text="{Binding Batiment.ResidenceNom}"
                           FontSize="16"
                           TextColor="#6B7280" />


                    <!-- INFOS -->
                    <Border Stroke="#E5E7EB"
                            StrokeThickness="1"
                            Background="#F9FAFB"
                            Padding="16"
                            StrokeShape="RoundRectangle 12">

                        <VerticalStackLayout Spacing="14">

                            <Label Text="Informations"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   TextColor="#1F2937" />

                            <Grid ColumnDefinitions="120,*"
                                  RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto"
                                  ColumnSpacing="0">

                                <!-- Bloc -->
                                <Label Text="Bloc :" TextColor="#6B7280" />
                                <Label Grid.Column="1" Text="{Binding Batiment.Bloc}" TextColor="#111827" />

                                <!-- Résidence -->
                                <Label Grid.Row="1" Text="Résidence :" TextColor="#6B7280" />
                                <Label Grid.Row="1" Grid.Column="1" Text="{Binding Batiment.ResidenceNom}" TextColor="#111827" />

                                <!-- Lots -->
                                <Label Grid.Row="2" Text="Lots :" TextColor="#6B7280" />
                                <Label Grid.Row="2" Grid.Column="1" Text="{Binding Batiment.NbLots}" TextColor="#111827" />

                                <!-- Étages -->
                                <Label Grid.Row="3" Text="Étages :" TextColor="#6B7280" />
                                <Label Grid.Row="3" Grid.Column="1" Text="{Binding Batiment.NbEtages}" TextColor="#111827" />

                                <!-- Responsable -->
                                <Label Grid.Row="4" Text="Responsable :" TextColor="#6B7280" />
                                <Label Grid.Row="4" Grid.Column="1" Text="{Binding Batiment.ResponsableNom}" TextColor="#111827" />

                                <!-- Ascenseur -->
                                <Label Grid.Row="5" Text="Ascenseur :" TextColor="#6B7280" />
                                <Label Grid.Row="5" Grid.Column="1"
                                       Text="{Binding Batiment.HasAscenseur, Converter={StaticResource BoolToOuiNonConverter}}"
                                       TextColor="#111827"/>

                                <!-- Année construction -->
                                <Label Grid.Row="6" Text="Construction :" TextColor="#6B7280" />
                                <Label Grid.Row="6" Grid.Column="1" Text="{Binding Batiment.AnneeConstruction}" TextColor="#111827" />

                                <!-- Code accès -->
                                <Label Grid.Row="7" Text="Code accès :" TextColor="#6B7280" />
                                <Label Grid.Row="7" Grid.Column="1" Text="{Binding Batiment.CodeAcces}" TextColor="#111827" />

                            </Grid>

                        </VerticalStackLayout>
                    </Border>


                    <!-- BOUTONS -->
                    <Grid ColumnDefinitions="*,*,*" ColumnSpacing="14">

                        <Button x:Name="BtnEdit"
                                Text="Modifier"
                                BackgroundColor="#4F46E5"
                                TextColor="White"
                                CornerRadius="12"
                                Command="{Binding EditCommand}" />

                        <Button x:Name="BtnDelete"
                                Text="Supprimer"
                                Grid.Column="1"
                                BackgroundColor="#FEE2E2"
                                TextColor="#DC2626"
                                CornerRadius="12"
                                Command="{Binding DeleteCommand}" />

                        <Button Grid.Column="2"
                                Text="Retour"
                                BackgroundColor="#E5E7EB"
                                TextColor="#111827"
                                CornerRadius="12"
                                Clicked="Back_Clicked" />

                    </Grid>

                </VerticalStackLayout>
            </ScrollView>

        </layout:RoleDrawerLayout.MainContent>
    </layout:RoleDrawerLayout>
</ContentPage>
