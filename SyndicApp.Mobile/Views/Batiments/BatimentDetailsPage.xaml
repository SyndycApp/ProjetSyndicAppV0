<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SyndicApp.Mobile.Views.Batiments.BatimentDetailsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:layout="clr-namespace:SyndicApp.Mobile.Views.Layout"
    Title="Détails bâtiment"
    Shell.NavBarIsVisible="False"
    BackgroundColor="White">

    <layout:RoleDrawerLayout>
        <layout:RoleDrawerLayout.MainContent>

            <Grid BackgroundColor="White">
                <ScrollView>
                    <VerticalStackLayout Padding="16" Spacing="12">

                        <Label Text="{Binding Batiment.Nom}"
                               FontSize="20"
                               FontAttributes="Bold" />

                        <Label Text="{Binding Batiment.ResidenceNom}"
                               TextColor="#374151" />

                        <!-- Boutons d'action -->
                        <Grid ColumnDefinitions="*,*,*"
                              Margin="0,12,0,0"
                              ColumnSpacing="10">

                            <!-- visibles syndic seulement -->
                            <Button x:Name="BtnEdit"
                                    Text="Modifier"
                                    Command="{Binding EditCommand}" />

                            <Button x:Name="BtnDelete"
                                    Grid.Column="1"
                                    Text="Supprimer"
                                    TextColor="Red"
                                    Command="{Binding DeleteCommand}" />

                            <Button Grid.Column="2"
                                    Text="Retour"
                                    Clicked="Back_Clicked" />
                        </Grid>

                    </VerticalStackLayout>
                </ScrollView>
            </Grid>

        </layout:RoleDrawerLayout.MainContent>
    </layout:RoleDrawerLayout>
</ContentPage>
