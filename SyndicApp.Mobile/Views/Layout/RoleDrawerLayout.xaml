<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="SyndicApp.Mobile.Views.Layout.RoleDrawerLayout"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="RootLayout"
    BackgroundColor="White">

    <!-- ====== RESSOURCES LOCALES ====== -->
    <ContentView.Resources>
        <Color x:Key="TopbarColor">#2563EB</Color>
        <Color x:Key="HeaderTextOnDark">#FFFFFF</Color>
        <Color x:Key="BodyText">#111827</Color>
        <Color x:Key="Divider">#E5E7EB</Color>
        <Color x:Key="Chip">#F3F4F6</Color>

        <Style TargetType="Label">
            <Setter Property="TextColor" Value="{StaticResource BodyText}" />
        </Style>

        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="TextColor" Value="{StaticResource BodyText}" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="HorizontalOptions" Value="Start" />
        </Style>

        <Style x:Key="LogoutButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource MenuButtonStyle}">
            <Setter Property="BackgroundColor" Value="{StaticResource Chip}" />
        </Style>
    </ContentView.Resources>

    <!-- ========= LAYOUT GLOBAL ========= -->
    <Grid x:Name="Root" RowDefinitions="Auto,*" BackgroundColor="White">

        <!-- ===== TOPBAR ===== -->
        <Grid BackgroundColor="{StaticResource TopbarColor}" Padding="12,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="BtnOpen"
                    Grid.Column="0"
                    Text="☰"
                    FontSize="22"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource HeaderTextOnDark}"
                    Clicked="OpenDrawer_Clicked"/>

            <!-- ⚠️ IMPORTANT : x:Name pour pouvoir changer le titre en C# -->
            <Label x:Name="TitleLabel"
                   Grid.Column="1"
                   Text="SyndicApp"
                   HorizontalTextAlignment="Center"
                   VerticalOptions="Center"
                   FontAttributes="Bold"
                   TextColor="{StaticResource HeaderTextOnDark}"/>

            <Label Grid.Column="2"
                   Text="• • •"
                   TextColor="{StaticResource HeaderTextOnDark}"
                   VerticalOptions="Center"/>
        </Grid>

        <!-- ===== CONTENU PAGE ===== -->
        <Grid Grid.Row="1" BackgroundColor="White">
            <Grid x:Name="MainHost"/>
        </Grid>

        <!-- ===== BACKDROP ===== -->
        <BoxView x:Name="Backdrop"
                 Grid.RowSpan="2"
                 BackgroundColor="#66000000"
                 Opacity="0"
                 InputTransparent="True">
            <BoxView.GestureRecognizers>
                <TapGestureRecognizer Tapped="Backdrop_Tapped"/>
            </BoxView.GestureRecognizers>
        </BoxView>

        <!-- ===== DRAWER ===== -->
        <Border x:Name="Drawer"
                Grid.RowSpan="2"
                StrokeThickness="0"
                BackgroundColor="White"
                TranslationX="-1000"
                Padding="0">

            <Grid RowDefinitions="Auto,*">

                <!-- HEADER DU DRAWER -->
                <Grid BackgroundColor="{StaticResource TopbarColor}" Padding="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Label Text="Navigation"
                           TextColor="{StaticResource HeaderTextOnDark}"
                           FontAttributes="Bold"
                           VerticalOptions="Center"/>

                    <Button Grid.Column="1"
                            Text="→"
                            FontSize="22"
                            BackgroundColor="Transparent"
                            TextColor="{StaticResource HeaderTextOnDark}"
                            Clicked="CloseDrawer_Clicked"/>
                </Grid>

                <!-- MENU -->
                <ScrollView Grid.Row="1">
                    <VerticalStackLayout Padding="16" Spacing="10">

                        <!-- DASHBOARDS -->
                        <Label Text="Dashboards" FontAttributes="Bold"/>

                        <Button Text="Dashboard"
                                Style="{StaticResource MenuButtonStyle}"
                                CommandParameter="//syndic-dashboard"
                                Clicked="OnMenuItemClicked"/>

                        <Button Text="Dashboard affectations"
                                Style="{StaticResource MenuButtonStyle}"
                                CommandParameter="//affectation-dashboard"
                                Clicked="OnMenuItemClicked"/>

                        <Button Text="Mon espace (copro)"
                                Style="{StaticResource MenuButtonStyle}"
                                CommandParameter="//affectation-user-dashboard"
                                Clicked="OnMenuItemClicked"/>

                        <!-- RÉSIDENCES &amp; LOTS -->
                        <BoxView HeightRequest="1" BackgroundColor="{StaticResource Divider}"/>
                        <Label x:Name="SectionResidencesLabel"
                               Text="Résidences &amp; Lots"
                               FontAttributes="Bold"/>

                        <Button x:Name="BtnMenuResidences"
                                Text="Résidences"
                                Style="{StaticResource MenuButtonStyle}"
                                CommandParameter="//residences"
                                Clicked="OnMenuItemClicked"/>

                        <Button x:Name="BtnMenuBatiments"
                                Text="Bâtiments"
                                Style="{StaticResource MenuButtonStyle}"
                                CommandParameter="//batiments"
                                Clicked="OnMenuItemClicked"/>

                        <Button x:Name="BtnMenuLots"
                                Text="Lots"
                                Style="{StaticResource MenuButtonStyle}"
                                CommandParameter="//lots"
                                Clicked="OnMenuItemClicked"/>

                        <Button x:Name="BtnMenuAffectations"
                                Text="Affectations"
                                Style="{StaticResource MenuButtonStyle}"
                                CommandParameter="//affectation-lots"
                                Clicked="OnMenuItemClicked"/>

                        <!-- FINANCES -->
                        <BoxView HeightRequest="1" BackgroundColor="{StaticResource Divider}"/>
                        <Label x:Name="SectionFinancesLabel"
                               Text="Finances"
                               FontAttributes="Bold"/>

                        <Button x:Name="BtnMenuAppels"
                                Text="Appels de fonds"
                                Style="{StaticResource MenuButtonStyle}"
                                CommandParameter="//appels"
                                Clicked="OnMenuItemClicked"/>

                        <Button x:Name="BtnMenuCharges"
                                Text="Charges"
                                Style="{StaticResource MenuButtonStyle}"
                                CommandParameter="//charges"
                                Clicked="OnMenuItemClicked"/>

                        <Button x:Name="BtnMenuPaiements"
                                Text="Paiements"
                                Style="{StaticResource MenuButtonStyle}"
                                CommandParameter="//paiements"
                                Clicked="OnMenuItemClicked"/>

                        <!-- INCIDENTS &amp; TRAVAUX -->
                        <BoxView HeightRequest="1" BackgroundColor="{StaticResource Divider}"/>
                        <Label Text="Incidents &amp; Travaux"
                               FontAttributes="Bold"/>

                        <Button Text="Incidents"
                                Style="{StaticResource MenuButtonStyle}"
                                CommandParameter="//incidents"
                                Clicked="OnMenuItemClicked"/>

                        <Button Text="Interventions"
                                Style="{StaticResource MenuButtonStyle}"
                                CommandParameter="//interventions"
                                Clicked="OnMenuItemClicked"/>

                        <Button Text="Devis travaux"
                                Style="{StaticResource MenuButtonStyle}"
                                CommandParameter="//devis-travaux"
                                Clicked="OnMenuItemClicked"/>

                        <!-- LOGOUT -->
                        <BoxView HeightRequest="20"/>
                        <Button Text="Déconnexion"
                                Style="{StaticResource LogoutButtonStyle}"
                                CommandParameter="//login"
                                Clicked="OnMenuItemClicked"/>

                    </VerticalStackLayout>
                </ScrollView>
            </Grid>
        </Border>
    </Grid>
</ContentView>
