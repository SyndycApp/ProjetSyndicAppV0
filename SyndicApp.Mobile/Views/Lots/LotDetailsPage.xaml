<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SyndicApp.Mobile.Views.Lots.LotDetailsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:layout="clr-namespace:SyndicApp.Mobile.Views.Layout"
    Shell.NavBarIsVisible="False"
    Title="Détail Lot"
    BackgroundColor="White">

    <layout:RoleDrawerLayout>
        <layout:RoleDrawerLayout.MainContent>

            <Grid BackgroundColor="White">
                <ScrollView>
                    <VerticalStackLayout Padding="16" Spacing="12">

                        <!-- Infos de base -->
                        <Label Text="{Binding Lot.NumeroLot}"
                               FontSize="20"
                               FontAttributes="Bold" />
                        <Label Text="{Binding Lot.Type}"
                               TextColor="#374151" />
                        <Label Text="{Binding Lot.BatimentNom}"
                               TextColor="#374151" />

                        <!-- Statut + occupant actuel -->
                        <Frame Margin="0,12,0,0"
                               Padding="12"
                               CornerRadius="12"
                               HasShadow="False"
                               BorderColor="#E5E7EB">
                            <VerticalStackLayout Spacing="4">
                                <Label Text="{Binding StatutLot}"
                                       FontAttributes="Bold">
                                    <Label.Triggers>
                                        <DataTrigger TargetType="Label"
                                                     Binding="{Binding EstOccupe}"
                                                     Value="True">
                                            <Setter Property="TextColor" Value="#16A34A" />
                                        </DataTrigger>
                                        <DataTrigger TargetType="Label"
                                                     Binding="{Binding EstOccupe}"
                                                     Value="False">
                                            <Setter Property="TextColor" Value="#6B7280" />
                                        </DataTrigger>
                                    </Label.Triggers>
                                </Label>

                                <Label Text="{Binding OccupantDisplay}"
                                       FontSize="12"
                                       TextColor="#6B7280" />
                            </VerticalStackLayout>
                        </Frame>

                        <!-- Historique affectations -->
                        <Label Text="Historique des affectations"
                               FontAttributes="Bold"
                               Margin="0,16,0,0" />

                        <CollectionView ItemsSource="{Binding Historique}"
                                        HeightRequest="260">
                            <CollectionView.EmptyView>
                                <Label Text="Aucune affectation pour ce lot."
                                       FontSize="12"
                                       TextColor="#9CA3AF"
                                       HorizontalOptions="Center"
                                       Margin="0,8,0,0" />
                            </CollectionView.EmptyView>

                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame Margin="0,6"
                                           Padding="10"
                                           CornerRadius="10"
                                           HasShadow="False"
                                           BorderColor="#E5E7EB">
                                        <VerticalStackLayout Spacing="2">
                                            <Label Text="{Binding NomComplet}"
                                                   FontAttributes="Bold"
                                                   FontSize="14" />

                                            <Label FontSize="12"
                                                   TextColor="#6B7280"
                                                   Text="{Binding DateDebut, StringFormat='Début : {0:dd/MM/yyyy}'}" />

                                            <Label FontSize="12"
                                                   TextColor="#6B7280"
                                                   Text="{Binding DateFin, StringFormat='Fin : {0:dd/MM/yyyy}', TargetNullValue='Fin : en cours'}" />

                                            <Label FontSize="12"
                                                   TextColor="#6B7280">
                                                <Label.Triggers>
                                                    <DataTrigger TargetType="Label"
                                                                 Binding="{Binding EstProprietaire}"
                                                                 Value="True">
                                                        <Setter Property="Text" Value="Propriétaire" />
                                                    </DataTrigger>
                                                    <DataTrigger TargetType="Label"
                                                                 Binding="{Binding EstProprietaire}"
                                                                 Value="False">
                                                        <Setter Property="Text" Value="Locataire" />
                                                    </DataTrigger>
                                                </Label.Triggers>
                                            </Label>
                                        </VerticalStackLayout>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <!-- Boutons actions -->
                        <Grid ColumnDefinitions="*,*,*"
                              ColumnSpacing="10"
                              Margin="0,12,0,0">
                            <Button x:Name="BtnEdit"
                                    Text="Modifier"
                                    Command="{Binding EditCommand}" />

                            <Button x:Name="BtnDelete"
                                    Grid.Column="1"
                                    Text="Supprimer"
                                    TextColor="Red"
                                    Command="{Binding DeleteCommand}" />

                            <Button x:Name="BtnBack"
                                    Grid.Column="2"
                                    Text="Retour"
                                    Clicked="Back_Clicked" />
                        </Grid>

                    </VerticalStackLayout>
                </ScrollView>
            </Grid>

        </layout:RoleDrawerLayout.MainContent>
    </layout:RoleDrawerLayout>
</ContentPage>
