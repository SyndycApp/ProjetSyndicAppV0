<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"             xmlns:vm="clr-namespace:SyndicApp.Mobile.ViewModels.Auth"             x:Class="SyndicApp.Mobile.Views.Auth.LoginPage"             Title="Connexion">    <Grid Padding="24" RowDefinitions="Auto,Auto,Auto,Auto,*,Auto">        <Label Text="Email" />        <Entry Grid.Row="1" Text="{Binding Email}" Keyboard="Email" />        <Label Grid.Row="2" Text="Mot de passe" />        <Entry Grid.Row="3" Text="{Binding Password}" IsPassword="True" />        <Button Grid.Row="5" Text="Se connecter" Command="{Binding LoginAsyncCommand}" />    </Grid></ContentPage>