<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SyndicApp.Mobile.ViewModels.Auth"
             x:Class="SyndicApp.Mobile.Views.Auth.ResetPasswordPage"
             x:DataType="vm:ResetPasswordViewModel"
             Title="Nouveau mot de passe">

    <Grid Padding="24" BackgroundColor="{DynamicResource PageBackgroundColor}">
        <Frame HasShadow="True" CornerRadius="20" Padding="24" BackgroundColor="{DynamicResource CardBackgroundColor}">
            <VerticalStackLayout Spacing="16">
                <Label Text="Nouveau mot de passe" FontAttributes="Bold" FontSize="22" />
                <Label Text="{Binding Email, StringFormat='Compte : {0}'}" Opacity="0.7" />

                <Entry Placeholder="Nouveau mot de passe" IsPassword="True" Text="{Binding NewPassword}" />
                <Entry Placeholder="Confirmer le mot de passe" IsPassword="True" Text="{Binding ConfirmPassword}" />

                <Button Text="Valider" Command="{Binding SubmitCommand}" />
                <Label TextColor="Red" IsVisible="{Binding HasError}" Text="{Binding ErrorMessage}" />
            </VerticalStackLayout>
        </Frame>
    </Grid>
</ContentPage>
