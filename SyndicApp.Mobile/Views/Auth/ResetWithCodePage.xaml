<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:SyndicApp.Mobile.ViewModels.Auth"
    x:Class="SyndicApp.Mobile.Views.Auth.ResetWithCodePage"
    x:DataType="vm:ResetWithCodeViewModel"
    Shell.NavBarIsVisible="False"
    BackgroundColor="#F4F6F8">

    <Grid Padding="20">
        <Border HorizontalOptions="Center"
                VerticalOptions="Center"
                WidthRequest="360"
                StrokeThickness="0"
                BackgroundColor="White"
                Padding="24"
                StrokeShape="RoundRectangle 16">
            <Border.Shadow>
                <Shadow Brush="#40000000" Radius="12"/>
            </Border.Shadow>

            <VerticalStackLayout Spacing="16">
                <!-- Header -->
                <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                    <Image Source="logo.png" WidthRequest="120" HeightRequest="120" Aspect="AspectFit"/>
                    <Label Text="Nouveau mot de passe" FontSize="22" FontAttributes="Bold" TextColor="#1C1C1E"/>
                </VerticalStackLayout>

                <Label Text="Choisissez un nouveau mot de passe pour votre compte."
                       FontSize="13" TextColor="#6B7280"
                       HorizontalTextAlignment="Center" LineBreakMode="WordWrap"/>

                <!-- New password -->
                <Border StrokeShape="RoundRectangle 8" BackgroundColor="#FFFFFF" Padding="12">
                    <Entry Placeholder="Nouveau mot de passe"
                           IsPassword="True"
                           Text="{Binding NewPassword}"
                           TextColor="Black"
                           BackgroundColor="Transparent"/>
                </Border>

                <!-- Confirm -->
                <Border StrokeShape="RoundRectangle 8" BackgroundColor="#FFFFFF" Padding="12">
                    <Entry Placeholder="Confirmer le mot de passe"
                           IsPassword="True"
                           Text="{Binding ConfirmPassword}"
                           TextColor="Black"
                           BackgroundColor="Transparent"/>
                </Border>

                <!-- Action -->
                <Button Text="Valider"
                        Command="{Binding SubmitCommand}"
                        HeightRequest="48"
                        FontAttributes="Bold"
                        TextColor="White"
                        BackgroundColor="#1E63E9"
                        CornerRadius="12"/>

                <!-- Erreur -->
                <Border BackgroundColor="#FDECEA"
                        StrokeThickness="0"
                        Padding="10"
                        StrokeShape="RoundRectangle 8"
                        IsVisible="{Binding HasError}">
                    <Label Text="{Binding ErrorMessage}" TextColor="#B3261E" FontSize="13"/>
                </Border>

                <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" Color="#1E63E9"/>
            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentPage>
