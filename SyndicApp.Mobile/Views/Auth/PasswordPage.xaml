<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"             xmlns:vm="clr-namespace:SyndicApp.Mobile.ViewModels.Auth"             x:Class="SyndicApp.Mobile.Views.Auth.PasswordPage"             Title="Mot de passe">    <ScrollView>        <VerticalStackLayout Padding="24" Spacing="12">            <Label Text="Mot de passe oublie" FontAttributes="Bold" />            <Entry Placeholder="Email" Text="{Binding Email}" />            <Button Text="Envoyer" Command="{Binding ForgotAsyncCommand}" />            <BoxView HeightRequest="1" />            <Label Text="Reinitialiser" FontAttributes="Bold" />            <Entry Placeholder="Token" Text="{Binding Token}" />            <Entry Placeholder="Nouveau mot de passe" Text="{Binding NewPassword}" IsPassword="True" />            <Button Text="Reinitialiser" Command="{Binding ResetAsyncCommand}" />        </VerticalStackLayout>    </ScrollView></ContentPage>