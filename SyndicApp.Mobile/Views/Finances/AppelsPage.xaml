<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SyndicApp.Mobile.Views.Finances.AppelsPage"
    x:Name="Page"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:SyndicApp.Mobile.ViewModels.Finances"
    xmlns:models="clr-namespace:SyndicApp.Mobile.Models"
    xmlns:conv="clr-namespace:SyndicApp.Mobile.Converters"
    xmlns:layouts="clr-namespace:SyndicApp.Mobile.Views.Layout"
    x:DataType="viewmodels:AppelsListViewModel"
    Shell.NavBarIsVisible="False"
    BackgroundColor="White"
    Title="Appels de fonds">

    <ContentPage.Resources>
        <Color x:Key="TopbarColor">#2563EB</Color>
        <Color x:Key="HeaderTextOnDark">#FFFFFF</Color>
        <Color x:Key="BodyText">#111827</Color>
        <Color x:Key="Divider">#E5E7EB</Color>
        <Color x:Key="Chip">#F3F4F6</Color>

        <Style TargetType="Label">
            <Setter Property="TextColor" Value="{StaticResource BodyText}" />
        </Style>

        <conv:ProgressConverter x:Key="ProgressConverter" />
    </ContentPage.Resources>

    <!-- ========= Layout global avec drawer partagé ========= -->
    <layouts:RoleDrawerLayout>

        <!-- ========= Contenu de la page Appels ========= -->
        <layouts:RoleDrawerLayout.MainContent>
            <Grid RowDefinitions="Auto,*"
                  Padding="16"
                  BackgroundColor="White">

                <!-- Header local : titre + bouton Ajouter (syndic only) -->
                <Grid Grid.Row="0"
                      ColumnDefinitions="*,Auto"
                      Margin="0,0,0,8">
                    <Label Text="Appels de fonds"
                           FontAttributes="Bold"
                           FontSize="20"
                           VerticalOptions="Center" />

                    <Button Grid.Column="1"
                            Text="+"
                            FontAttributes="Bold"
                            BackgroundColor="{StaticResource TopbarColor}"
                            TextColor="White"
                            CornerRadius="18"
                            Padding="14,6"
                            Command="{Binding OpenCreateCommand}"
                            IsVisible="{Binding IsSyndic}" />
                </Grid>

                <!-- Liste des appels -->
                <CollectionView Grid.Row="1"
                                ItemsSource="{Binding Appels}"
                                SelectionMode="None">
                    <CollectionView.EmptyView>
                        <Label Text="Aucun appel pour le moment"
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />
                    </CollectionView.EmptyView>

                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:AppelDeFondsDto">
                            <Frame Padding="14"
                                   Margin="0,6"
                                   BorderColor="#1F4CA3"
                                   HasShadow="False"
                                   CornerRadius="12">
                                <Grid ColumnDefinitions="*,Auto"
                                      RowDefinitions="Auto,Auto,Auto">

                                    <!-- Titre -->
                                    <Label Grid.ColumnSpan="2"
                                           Text="{Binding Description}"
                                           FontAttributes="Bold"
                                           FontSize="16" />

                                    <!-- Infos date + résidence -->
                                    <StackLayout Grid.Row="1"
                                                 Spacing="2">
                                        <Label Text="{Binding DateEmission, StringFormat='Date d''émission : {0:dd MMM yyyy}'}"
                                               FontSize="12" />
                                        <Label Text="{Binding ResidenceNom, StringFormat='Résidence : {0}'}"
                                               FontSize="12" />
                                    </StackLayout>

                                    <!-- Montant total -->
                                    <Label Grid.RowSpan="2"
                                           Grid.Column="1"
                                           VerticalOptions="Center"
                                           Text="{Binding MontantTotal, StringFormat='{0:N2} €'}"
                                           FontAttributes="Bold" />

                                    <!-- Barre de progression -->
                                    <Grid Grid.Row="2"
                                          Grid.ColumnSpan="2"
                                          Margin="0,8,0,0">
                                        <ProgressBar
                                            Progress="{Binding MontantPaye,
                                                               Converter={StaticResource ProgressConverter},
                                                               ConverterParameter={Binding MontantTotal}}" />
                                    </Grid>

                                    <!-- Tap → détails -->
                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer
                                            Command="{Binding Source={x:Reference Page},
                                                              Path=BindingContext.OpenDetailsCommand}"
                                            CommandParameter="{Binding .}" />
                                    </Grid.GestureRecognizers>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Grid>
        </layouts:RoleDrawerLayout.MainContent>
    </layouts:RoleDrawerLayout>
</ContentPage>
