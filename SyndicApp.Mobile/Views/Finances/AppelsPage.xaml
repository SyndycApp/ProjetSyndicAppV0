<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SyndicApp.Mobile.Views.Finances.AppelsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Appels"
    Shell.NavBarIsVisible="False"
    BackgroundColor="White">

    <!-- ===== RESSOURCES (comme Drawer/Dashboard) ===== -->
    <ContentPage.Resources>
        <Color x:Key="TopbarColor">#2563EB</Color>
        <Color x:Key="HeaderTextOnDark">#FFFFFF</Color>
        <Color x:Key="BodyText">#111827</Color>
        <Color x:Key="Divider">#E5E7EB</Color>
        <Color x:Key="Chip">#F3F4F6</Color>

        <Style TargetType="Label">
            <Setter Property="TextColor" Value="{StaticResource BodyText}" />
        </Style>

        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="TextColor" Value="{StaticResource BodyText}" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="HorizontalOptions" Value="Start" />
        </Style>

        <Style x:Key="LogoutButtonStyle" TargetType="Button" BasedOn="{StaticResource MenuButtonStyle}">
            <Setter Property="BackgroundColor" Value="{StaticResource Chip}" />
        </Style>
    </ContentPage.Resources>

    <!-- ===== LAYOUT : Topbar + Contenu + Overlay + Drawer ===== -->
    <Grid x:Name="Root" RowDefinitions="Auto,*" BackgroundColor="White">

        <!-- TOPBAR -->
        <Grid BackgroundColor="{StaticResource TopbarColor}" Padding="12,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Ouvrir drawer -->
            <Button x:Name="BtnOpen"
                    Grid.Column="0"
                    Text="☰"
                    FontSize="22"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource HeaderTextOnDark}"
                    Clicked="OpenDrawer_Clicked"/>

            <Label Grid.Column="1"
                   Text="Appels De Fonds"
                   HorizontalTextAlignment="Center"
                   VerticalOptions="Center"
                   FontAttributes="Bold"
                   TextColor="{StaticResource HeaderTextOnDark}"/>

            <!-- Action: créer un appel -->
            <Button Grid.Column="2"
                    Text="+"
                    FontSize="22"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource HeaderTextOnDark}"
                    Command="{Binding OpenCreateCommand}"/>
        </Grid>

        <!-- CONTENU -->
        <Grid Grid.Row="1" Padding="16">
            <CollectionView ItemsSource="{Binding Appels}"
                            SelectionMode="None"
                            RemainingItemsThreshold="2">
                <CollectionView.EmptyView>
                    <Label Text="Aucun appel pour le moment"
                           HorizontalOptions="Center" VerticalOptions="Center"/>
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="14" Margin="0,6" BorderColor="#1F4CA3"
                               HasShadow="False" CornerRadius="12">
                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto">
                                <Label Grid.ColumnSpan="2" Text="{Binding Description}"
                                       FontAttributes="Bold" FontSize="16"/>

                                <StackLayout Grid.Row="1" Spacing="2">
                                    <Label Text="{Binding DateEmission, StringFormat='Date d’émission : {0:dd MMM yyyy}'}"
                                           FontSize="12"/>
                                    <Label Text="{Binding ResidenceId, StringFormat='Résidence : {0}'}"
                                           FontSize="12"/>
                                </StackLayout>

                                <Label Grid.RowSpan="2" Grid.Column="1" VerticalOptions="Center"
                                       Text="{Binding MontantTotal, StringFormat='{0:N2} €'}"
                                       FontAttributes="Bold"/>

                                <Grid Grid.Row="2" Grid.ColumnSpan="2" Margin="0,8,0,0">
                                    <ProgressBar Progress="{Binding MontantPaye,
                                                Converter={StaticResource ProgressConverter},
                                                ConverterParameter={Binding MontantTotal}}"/>
                                </Grid>

                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}},
                                                          Path=BindingContext.OpenDetailsCommand}"
                                        CommandParameter="{Binding .}"/>
                                </Grid.GestureRecognizers>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>

        <!-- OVERLAY -->
        <BoxView x:Name="Backdrop"
                 Grid.RowSpan="2"
                 BackgroundColor="#66000000"
                 Opacity="0"
                 InputTransparent="True">
            <BoxView.GestureRecognizers>
                <TapGestureRecognizer Tapped="Backdrop_Tapped"/>
            </BoxView.GestureRecognizers>
        </BoxView>

        <!-- DRAWER -->
        <Border x:Name="Drawer"
                Grid.RowSpan="2"
                BackgroundColor="White"
                StrokeThickness="0"
                TranslationX="-1000"
                Padding="0">
            <Grid RowDefinitions="Auto,*">
                <Grid BackgroundColor="{StaticResource TopbarColor}" Padding="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Label Text="Navigation"
                           TextColor="{StaticResource HeaderTextOnDark}"
                           FontAttributes="Bold"
                           VerticalOptions="Center"/>

                    <Button Grid.Column="1"
                            Text="→"
                            FontSize="22"
                            BackgroundColor="Transparent"
                            TextColor="{StaticResource HeaderTextOnDark}"
                            Clicked="CloseDrawer_Clicked"/>
                </Grid>

                <ScrollView Grid.Row="1" BackgroundColor="White">
                    <VerticalStackLayout Padding="16" Spacing="10">
                        <Label Text="Tableau de bord" FontAttributes="Bold"/>
                        <Button Text="Dashboard"
                                Style="{StaticResource MenuButtonStyle}"
                                CommandParameter="//syndic-dashboard"
                                Clicked="OnMenuItemClicked"/>

                        <BoxView HeightRequest="1" BackgroundColor="{StaticResource Divider}" />
                        <Label Text="Finances" FontAttributes="Bold"/>

                        <!-- routes Finances -->
                        <Button Text="Appels de fonds"
                                Style="{StaticResource MenuButtonStyle}"
                                CommandParameter="//appels"
                                Clicked="OnMenuItemClicked"/>
                        <Button Text="Créer un appel"
                                Style="{StaticResource MenuButtonStyle}"
                                CommandParameter="appel-create"
                                Clicked="OnMenuItemClicked"/>

                        <BoxView HeightRequest="16" Opacity="0"/>
                        <Button Text="Déconnexion"
                                Style="{StaticResource LogoutButtonStyle}"
                                CommandParameter="//login"
                                Clicked="OnMenuItemClicked"/>
                    </VerticalStackLayout>
                </ScrollView>
            </Grid>
        </Border>
    </Grid>
</ContentPage>
