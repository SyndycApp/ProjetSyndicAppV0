<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SyndicApp.Mobile.Views.Finances.ChargeCreatePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:SyndicApp.Mobile.ViewModels.Finances"
    xmlns:layout="clr-namespace:SyndicApp.Mobile.Views.Layout"
    x:DataType="viewmodels:ChargeCreateViewModel"
    Title="Nouvelle charge"
    Shell.NavBarIsVisible="False"
    BackgroundColor="White">

    <ContentPage.Resources>
        <Color x:Key="TopbarColor">#2563EB</Color>
        <Color x:Key="HeaderTextOnDark">#FFFFFF</Color>
        <Color x:Key="BodyText">#111827</Color>
        <Color x:Key="Divider">#E5E7EB</Color>

        <Style TargetType="Label">
            <Setter Property="TextColor" Value="{StaticResource BodyText}" />
        </Style>

        <Style x:Key="EntryStyle" TargetType="Entry">
            <Setter Property="TextColor" Value="{StaticResource BodyText}" />
            <Setter Property="PlaceholderColor" Value="#9CA3AF" />
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="ClearButtonVisibility" Value="WhileEditing" />
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#2563EB" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="CornerRadius" Value="14" />
            <Setter Property="HeightRequest" Value="48" />
            <Setter Property="FontAttributes" Value="Bold" />
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="BackgroundColor" Value="#E5E7EB" />
            <Setter Property="TextColor" Value="#111827" />
        </Style>
    </ContentPage.Resources>

    <layout:RoleDrawerLayout>
        <layout:RoleDrawerLayout.MainContent>

            <Grid RowDefinitions="Auto,*"
                  BackgroundColor="White">

                <!-- En-tête locale -->
                <Grid Grid.Row="0"
                      Padding="16,8"
                      ColumnDefinitions="Auto,*,Auto">
                    <Button Text="←"
                            FontSize="20"
                            BackgroundColor="Transparent"
                            TextColor="{StaticResource TopbarColor}"
                            Clicked="OnBackClicked" />

                    <Label Grid.Column="1"
                           Text="Nouvelle charge"
                           HorizontalTextAlignment="Center"
                           VerticalOptions="Center"
                           FontAttributes="Bold" />

                    <Label Grid.Column="2"
                           Text=" "
                           IsVisible="False" />
                </Grid>

                <!-- Formulaire -->
                <Grid Grid.Row="1" BackgroundColor="White">
                    <ScrollView>
                        <VerticalStackLayout Padding="20" Spacing="16">

                            <Label Text="Nom de la charge" FontAttributes="Bold" />
                            <Entry Style="{StaticResource EntryStyle}"
                                   Placeholder="Ex: Eau, Électricité..."
                                   Text="{Binding Nom}" />

                            <Label Text="Montant (MAD)" FontAttributes="Bold" />
                            <Entry Style="{StaticResource EntryStyle}"
                                   Keyboard="Numeric"
                                   Placeholder="0.00"
                                   Text="{Binding Montant}" />

                            <Label Text="Date de la charge" FontAttributes="Bold" />
                            <DatePicker Date="{Binding DateCharge}"
                                        Format="dd/MM/yyyy"
                                        TextColor="{StaticResource BodyText}"
                                        BackgroundColor="Transparent" />

                            <Label Text="Résidence" FontAttributes="Bold" />
                            <Picker Title="Choisir une résidence"
                                    ItemsSource="{Binding Residences}"
                                    SelectedItem="{Binding SelectedResidence}"
                                    TextColor="{StaticResource BodyText}" />

                            <Grid ColumnDefinitions="*,*"
                                  Margin="0,16,0,0"
                                  ColumnSpacing="12">
                                <Button Text="Annuler"
                                        Style="{StaticResource SecondaryButton}"
                                        Clicked="OnBackClicked" />
                                <Button Grid.Column="1"
                                        Text="Enregistrer"
                                        Style="{StaticResource PrimaryButton}"
                                        Command="{Binding SaveCommand}" />
                            </Grid>
                        </VerticalStackLayout>
                    </ScrollView>
                </Grid>

            </Grid>

        </layout:RoleDrawerLayout.MainContent>
    </layout:RoleDrawerLayout>
</ContentPage>
