<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SyndicApp.Mobile.Views.Finances.ChargeDetailsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:SyndicApp.Mobile.ViewModels.Finances"
    xmlns:layout="clr-namespace:SyndicApp.Mobile.Views.Layout"
    x:DataType="viewmodels:ChargeDetailsViewModel"
    Shell.NavBarIsVisible="False"
    BackgroundColor="White"
    Title="Détails charge">

    <ContentPage.Resources>
        <Color x:Key="BodyText">#111827</Color>
        <Color x:Key="Divider">#E5E7EB</Color>
        <Color x:Key="PrimaryActionColor">#4F46E5</Color>

        <Style TargetType="Label">
            <Setter Property="TextColor" Value="{StaticResource BodyText}" />
        </Style>

        <Style x:Key="PrimaryActionButton" TargetType="Button">
            <Setter Property="BackgroundColor" Value="{StaticResource PrimaryActionColor}" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="CornerRadius" Value="18" />
            <Setter Property="Padding" Value="16,8" />
            <Setter Property="FontAttributes" Value="Bold" />
        </Style>
    </ContentPage.Resources>

    <layout:RoleDrawerLayout>
        <layout:RoleDrawerLayout.MainContent>

            <Grid RowDefinitions="Auto,*">

                <!-- En-tête -->
                <Grid BackgroundColor="White"
                      Padding="12,8"
                      ColumnDefinitions="Auto,*,Auto">
                    <Button Text="←"
                            FontSize="20"
                            BackgroundColor="Transparent"
                            TextColor="#2563EB"
                            Clicked="OnBackClicked" />

                    <Label Grid.Column="1"
                           Text="Charge - détails"
                           HorizontalTextAlignment="Center"
                           VerticalOptions="Center"
                           FontAttributes="Bold" />

                    <Label Grid.Column="2"
                           Text=" "
                           IsVisible="False" />
                </Grid>

                <!-- Contenu -->
                <ScrollView Grid.Row="1">
                    <VerticalStackLayout Padding="16" Spacing="12">

                        <Label Text="{Binding Charge.Nom}"
                               FontSize="24"
                               FontAttributes="Bold" />

                        <Frame Padding="16"
                               BorderColor="#E2E8F0"
                               CornerRadius="14">
                            <VerticalStackLayout Spacing="6">
                                <Label Text="{Binding Charge.Montant, StringFormat='Montant : {0:N2} MAD'}"
                                       FontAttributes="Bold" />
                                <Label Text="{Binding Charge.DateCharge, StringFormat='Date : {0:dd/MM/yyyy}'}" />
                                <Label Text="{Binding Charge.ResidenceNom, StringFormat='Résidence : {0}'}" />
                            </VerticalStackLayout>
                        </Frame>

                        <Grid ColumnDefinitions="*,*"
                              Margin="0,12,0,0"
                              ColumnSpacing="12">

                            <Button Text="Modifier"
                                    Style="{StaticResource PrimaryActionButton}"
                                    Command="{Binding EditCommand}"
                                    IsVisible="{Binding CanManageCharges}" />

                            <Button Grid.Column="1"
                                    Text="Supprimer"
                                    Style="{StaticResource PrimaryActionButton}"
                                    TextColor="Red"
                                    Command="{Binding DeleteCommand}"
                                    IsVisible="{Binding CanManageCharges}" />
                        </Grid>
                    </VerticalStackLayout>
                </ScrollView>

            </Grid>

        </layout:RoleDrawerLayout.MainContent>
    </layout:RoleDrawerLayout>
</ContentPage>
