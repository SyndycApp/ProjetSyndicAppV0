<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SyndicApp.Mobile.Views.Finances.PaiementDetailsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:SyndicApp.Mobile.Converters"
    xmlns:vm="clr-namespace:SyndicApp.Mobile.ViewModels.Finances"
    xmlns:models="clr-namespace:SyndicApp.Mobile.Models"
    x:DataType="vm:PaiementDetailsViewModel"
    x:Name="RootPage"
    Title="Détails paiement"
    BackgroundColor="White"
    Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <Color x:Key="TopbarColor">#2563EB</Color>
        <Color x:Key="HeaderTextOnDark">#FFFFFF</Color>
        <Color x:Key="BodyText">#111827</Color>
        <Color x:Key="Divider">#E5E7EB</Color>
        <Color x:Key="Chip">#F3F4F6</Color>

        <converters:BoolToOuiNonConverter x:Key="BoolToOuiNonConverter" />

        <Style TargetType="Label">
            <Setter Property="TextColor" Value="{StaticResource BodyText}" />
        </Style>

        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="TextColor" Value="{StaticResource BodyText}" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="HorizontalOptions" Value="Start" />
        </Style>

        <Style x:Key="TitleLabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontAttributes" Value="Bold" />
        </Style>

        <Style x:Key="FieldLabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="TextColor" Value="#6B7280" />
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#2563EB" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Padding" Value="14,10" />
        </Style>

        <Style x:Key="OutlineButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="TextColor" Value="#2563EB" />
            <Setter Property="BorderColor" Value="#2563EB" />
            <Setter Property="BorderWidth" Value="1" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Padding" Value="14,10" />
        </Style>

        <Style x:Key="CardStyle" TargetType="Frame">
            <Setter Property="HasShadow" Value="False" />
            <Setter Property="CornerRadius" Value="14" />
            <Setter Property="Padding" Value="14" />
            <Setter Property="BackgroundColor" Value="White" />
            <Setter Property="BorderColor" Value="#E5E7EB" />
        </Style>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*" BackgroundColor="White">

        <!-- TOPBAR -->
        <Grid BackgroundColor="{StaticResource TopbarColor}" Padding="12,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button x:Name="BtnOpen"
                    Grid.Column="0"
                    Text="☰"
                    FontSize="22"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource HeaderTextOnDark}"
                    Clicked="OpenDrawer_Clicked" />

            <Label Grid.Column="1"
                   Text="Détails paiement"
                   HorizontalTextAlignment="Center"
                   VerticalOptions="Center"
                   FontAttributes="Bold"
                   TextColor="{StaticResource HeaderTextOnDark}" />

            <Label Grid.Column="2"
                   Text="• • •"
                   TextColor="{StaticResource HeaderTextOnDark}"
                   VerticalOptions="Center" />
        </Grid>

        <!-- CONTENU -->
        <Grid Grid.Row="1">
            <ScrollView>
                <VerticalStackLayout Padding="16" Spacing="16">

                    <Label Text="Résumé du paiement" Style="{StaticResource TitleLabelStyle}" />

                    <!-- Utilisateur -->
                    <Frame Style="{StaticResource CardStyle}">
                        <VerticalStackLayout Spacing="6">
                            <Label Text="Utilisateur" FontAttributes="Bold" />
                            <Grid ColumnDefinitions="*,*">
                                <Label Grid.Column="0"
                                       Text="{Binding UserFullName}"
                                       FontSize="14" />
                                <Label Grid.Column="1"
                                       Text="{Binding UserRole}"
                                       FontSize="14"
                                       HorizontalTextAlignment="End" />
                            </Grid>

                            <Label Text="Adresse" Style="{StaticResource FieldLabelStyle}" />
                            <Label Text="{Binding UserAdresse}"
                                   FontSize="13"
                                   TextColor="#6B7280"
                                   LineBreakMode="WordWrap" />
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Paiement -->
                    <Frame Style="{StaticResource CardStyle}">
                        <VerticalStackLayout Spacing="6">
                            <Label Text="Paiement" FontAttributes="Bold" />

                            <Grid ColumnDefinitions="*,*">
                                <Label Grid.Column="0"
                                       Text="{Binding Montant, StringFormat='Montant : {0:F2} DH'}" />
                                <Label Grid.Column="1"
                                       Text="{Binding DatePaiement, StringFormat='Le {0:dd/MM/yyyy}'}"
                                       HorizontalTextAlignment="End" />
                            </Grid>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Appel de fonds -->
                    <Frame Style="{StaticResource CardStyle}">
                        <VerticalStackLayout Spacing="6">
                            <Label Text="Appel de fonds" FontAttributes="Bold" />

                            <Label Text="{Binding AppelDescription}"
                                   FontSize="13"
                                   TextColor="#374151" />

                            <Grid ColumnDefinitions="*,*">
                                <Label Grid.Column="0"
                                       Text="{Binding MontantTotal, StringFormat='Total : {0:F2} DH'}" />
                                <Label Grid.Column="1"
                                       Text="{Binding MontantReste, StringFormat='Reste : {0:F2} DH'}"
                                       HorizontalTextAlignment="End" />
                            </Grid>

                            <Grid ColumnDefinitions="*,*">
                                <Label Grid.Column="0"
                                       Text="{Binding NbPaiements, StringFormat='Nombre de paiements : {0}'}" />
                                <Label Grid.Column="1"
                                       Text="{Binding DateEmission, StringFormat='Émis le : {0:dd/MM/yyyy}'}"
                                       HorizontalTextAlignment="End" />
                            </Grid>

                            <Label Text="{Binding ResidenceNom, StringFormat='Résidence : {0}'}"
                                   FontSize="13" />
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Résidence -->
                    <Frame Style="{StaticResource CardStyle}">
                        <VerticalStackLayout Spacing="6">
                            <Label Text="Résidence" FontAttributes="Bold" />
                            <Label Text="{Binding ResidenceNom}" FontSize="14" />
                            <Label Text="{Binding ResidenceAdresseComplete}"
                                   FontSize="13"
                                   TextColor="#6B7280"
                                   LineBreakMode="WordWrap" />
                        </VerticalStackLayout>
                    </Frame>

                    <Button Text="Retour"
                            Style="{StaticResource OutlineButtonStyle}"
                            Command="{Binding GoBackCommand}" />

                </VerticalStackLayout>
            </ScrollView>
        </Grid>

        <!-- OVERLAY -->
        <BoxView x:Name="Backdrop"
                 Grid.RowSpan="2"
                 BackgroundColor="#66000000"
                 Opacity="0"
                 InputTransparent="True">
            <BoxView.GestureRecognizers>
                <TapGestureRecognizer Tapped="Backdrop_Tapped" />
            </BoxView.GestureRecognizers>
        </BoxView>

        <!-- DRAWER -->
        <Border x:Name="Drawer"
                Grid.RowSpan="2"
                BackgroundColor="White"
                StrokeThickness="0"
                TranslationX="-1000"
                Padding="0">
            <Grid RowDefinitions="Auto,*">
                <Grid BackgroundColor="{StaticResource TopbarColor}" Padding="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Label Text="Navigation"
                           TextColor="{StaticResource HeaderTextOnDark}"
                           FontAttributes="Bold"
                           VerticalOptions="Center" />
                    <Button Grid.Column="1"
                            Text="×"
                            FontSize="22"
                            BackgroundColor="Transparent"
                            TextColor="{StaticResource HeaderTextOnDark}"
                            Clicked="CloseDrawer_Clicked" />
                </Grid>

                <ScrollView Grid.Row="1" BackgroundColor="White">
                    <VerticalStackLayout Padding="16" Spacing="10">
                        <Label Text="Tableau de bord" FontAttributes="Bold" />
                        <Button Text="Dashboard" Style="{StaticResource MenuButtonStyle}" CommandParameter="//syndic-dashboard" Clicked="OnMenuItemClicked" />
                        <Button Text="Dashboard Affectations"
                                Style="{StaticResource MenuButtonStyle}"
                                CommandParameter="//affectation-dashboard"
                                Clicked="OnMenuItemClicked" />
                        <Button Text="Mon espace (copro)"
                                Style="{StaticResource MenuButtonStyle}"
                                CommandParameter="//affectation-user-dashboard"
                                Clicked="OnMenuItemClicked" />
                        <Button Text="Gardien / Maintenance"
                                Style="{StaticResource MenuButtonStyle}"
                                CommandParameter="//affectation-maintenance-dashboard"
                                Clicked="OnMenuItemClicked" />
                        <Button Text="Statistiques affectations"
                                Style="{StaticResource MenuButtonStyle}"
                                CommandParameter="//affectation-analytics"
                                Clicked="OnMenuItemClicked" />

                        <BoxView HeightRequest="1" BackgroundColor="{StaticResource Divider}" />
                        <Label Text="Résidences &amp; Lots" FontAttributes="Bold" />
                        <Button Text="Résidences" Style="{StaticResource MenuButtonStyle}" CommandParameter="//residences" Clicked="OnMenuItemClicked" />
                        <Button Text="Bâtiments" Style="{StaticResource MenuButtonStyle}" CommandParameter="//batiments" Clicked="OnMenuItemClicked" />
                        <Button Text="Lots" Style="{StaticResource MenuButtonStyle}" CommandParameter="//lots" Clicked="OnMenuItemClicked" />
                        <Button Text="Affectations des lots" Style="{StaticResource MenuButtonStyle}" CommandParameter="//affectation-lots" Clicked="OnMenuItemClicked" />
                        <Button Text="Historique affectations" Style="{StaticResource MenuButtonStyle}" CommandParameter="//affectation-historique" Clicked="OnMenuItemClicked" />

                        <BoxView HeightRequest="1" BackgroundColor="{StaticResource Divider}" />
                        <Label Text="Finances" FontAttributes="Bold" />
                        <Button Text="Appels de fonds" Style="{StaticResource MenuButtonStyle}" CommandParameter="//appels" Clicked="OnMenuItemClicked" />
                        <Button Text="Créer un appel" Style="{StaticResource MenuButtonStyle}" CommandParameter="appel-create" Clicked="OnMenuItemClicked" />
                        <Button Text="Paiements" Style="{StaticResource MenuButtonStyle}" CommandParameter="//paiements" Clicked="OnMenuItemClicked" />

                        <BoxView HeightRequest="16" Opacity="0" />
                        <Button Text="Déconnexion" Style="{StaticResource MenuButtonStyle}" CommandParameter="//login" Clicked="OnMenuItemClicked" />
                    </VerticalStackLayout>
                </ScrollView>
            </Grid>
        </Border>
    </Grid>
</ContentPage>
