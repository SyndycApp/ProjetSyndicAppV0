<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SyndicApp.Mobile.Views.Finances.PaiementDetailsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:SyndicApp.Mobile.ViewModels.Finances"
    xmlns:layouts="clr-namespace:SyndicApp.Mobile.Views.Layout"
    x:DataType="viewmodels:PaiementDetailsViewModel"
    BackgroundColor="White"
    Shell.NavBarIsVisible="False"
    Title="Détails Paiement">

    <layouts:RoleDrawerLayout>

        <layouts:RoleDrawerLayout.MainContent>

            <ScrollView Padding="16">
                <VerticalStackLayout Spacing="16">

                    <Label Text="Détails du paiement"
                           FontAttributes="Bold"
                           FontSize="20" />

                    <Frame Padding="14" CornerRadius="12" HasShadow="False">
                        <VerticalStackLayout>
                            <Label Text="Utilisateur" FontAttributes="Bold" />
                            <Label Text="{Binding UserFullName}" />
                        </VerticalStackLayout>
                    </Frame>

                    <Frame Padding="14" CornerRadius="12" HasShadow="False">
                        <VerticalStackLayout>
                            <Label Text="Montant" FontAttributes="Bold" />
                            <Label Text="{Binding Montant, StringFormat='{0:F2} DH'}" />
                        </VerticalStackLayout>
                    </Frame>

                </VerticalStackLayout>
            </ScrollView>

        </layouts:RoleDrawerLayout.MainContent>

    </layouts:RoleDrawerLayout>
</ContentPage>
