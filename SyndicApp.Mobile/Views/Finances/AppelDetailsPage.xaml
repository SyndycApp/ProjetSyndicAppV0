<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SyndicApp.Mobile.Views.Finances.AppelDetailsPage"
    x:Name="Page"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:SyndicApp.Mobile.ViewModels.Finances"
    xmlns:layouts="clr-namespace:SyndicApp.Mobile.Views.Layout"
    x:DataType="viewmodels:AppelDetailsViewModel"
    Shell.NavBarIsVisible="False"
    BackgroundColor="White"
    Title="Appel de fonds">

    <ContentPage.Resources>
        <Color x:Key="TopbarColor">#2563EB</Color>
        <Color x:Key="HeaderTextOnDark">#FFFFFF</Color>
        <Color x:Key="BodyText">#111827</Color>
        <Color x:Key="Divider">#E5E7EB</Color>
        <Color x:Key="PrimaryActionColor">#4F46E5</Color>

        <Style TargetType="Label">
            <Setter Property="TextColor" Value="{StaticResource BodyText}" />
        </Style>

        <Style x:Key="PrimaryActionButton" TargetType="Button">
            <Setter Property="BackgroundColor" Value="{StaticResource PrimaryActionColor}" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="CornerRadius" Value="18" />
            <Setter Property="Padding" Value="16,8" />
            <Setter Property="FontAttributes" Value="Bold" />
        </Style>
    </ContentPage.Resources>

    <layouts:RoleDrawerLayout>
        <layouts:RoleDrawerLayout.MainContent>

            <Grid RowDefinitions="Auto,*" BackgroundColor="White">

                <!-- Header -->
                <Grid Grid.Row="0"
                      Padding="12,8"
                      ColumnDefinitions="Auto,*,Auto">

                    <Button Text="←"
                            FontSize="20"
                            BackgroundColor="Transparent"
                            TextColor="{StaticResource BodyText}"
                            Clicked="OnBackClicked" />

                    <Label Grid.Column="1"
                           Text="Détail de l'appel"
                           HorizontalTextAlignment="Center"
                           VerticalOptions="Center"
                           FontAttributes="Bold" />

                </Grid>

                <!-- MAIN CONTENT -->
                <ScrollView Grid.Row="1">
                    <VerticalStackLayout Padding="16" Spacing="14">

                        <!-- Titre -->
                        <Label Text="{Binding Appel.Description}"
                               FontSize="24"
                               FontAttributes="Bold" />

                        <!-- CARD APPEL -->
                        <Frame Padding="16" BorderColor="#E2E8F0" CornerRadius="14">
                            <Grid ColumnDefinitions="*,Auto"
                                  RowDefinitions="Auto,Auto,Auto">

                                <Label Text="{Binding Appel.DateEmission, StringFormat='{0:dd/MM/yyyy}'}" />

                                <!-- PROGRESS BAR CORRIGÉE -->
                                <ProgressBar Grid.Row="1"
                                             Progress="{Binding Progress}" />

                                <Grid Grid.Row="2"
                                      ColumnDefinitions="*,*,*"
                                      Margin="0,10,0,0">

                                    <VerticalStackLayout>
                                        <Label Text="Montant total" FontSize="12" />
                                        <Label Text="{Binding Appel.MontantTotal, StringFormat='{0:N2} €'}"
                                               FontAttributes="Bold" />
                                    </VerticalStackLayout>

                                    <VerticalStackLayout Grid.Column="1">
                                        <Label Text="Payé" FontSize="12" />
                                        <Label Text="{Binding Appel.MontantPaye, StringFormat='{0:N2} €'}"
                                               FontAttributes="Bold" />
                                    </VerticalStackLayout>

                                    <VerticalStackLayout Grid.Column="2">
                                        <Label Text="Restant" FontSize="12" />
                                        <Label Text="{Binding Appel.MontantReste, StringFormat='{0:N2} €'}"
                                               FontAttributes="Bold" />
                                    </VerticalStackLayout>

                                </Grid>
                            </Grid>
                        </Frame>

                        <!-- PAIEMENTS -->
                        <Label Text="Paiements" FontAttributes="Bold" />

                        <CollectionView ItemsSource="{Binding Appel.Paiements}"
                                        SelectionMode="None">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid ColumnDefinitions="Auto,*,Auto"
                                          Padding="4,10">

                                        <Label Text="€" FontSize="18"
                                               Margin="0,-2,8,0" />

                                        <VerticalStackLayout>
                                            <Label Text="{Binding Statut}" FontAttributes="Bold" />
                                            <Label Text="{Binding DatePaiement, StringFormat='{0:dd/MM/yyyy}'}" />
                                            <Label Text="{Binding Montant, StringFormat='{0:N2} €'}" />

                                        </VerticalStackLayout>

                                        <Label Grid.Column="2"
                                               Text="{Binding Montant, StringFormat='{0:N2} €'}"
                                               FontAttributes="Bold"
                                               VerticalOptions="Center" />
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <!-- ACTIONS SYNDIC -->
                        <Grid ColumnDefinitions="*,*,*"
                              Margin="0,12,0,0"
                              ColumnSpacing="12"
                              IsVisible="{Binding IsSyndic}">

                            <Button Text="Clôturer"
                                    Style="{StaticResource PrimaryActionButton}"
                                    Command="{Binding CloturerCommand}" />

                            <Button Grid.Column="1"
                                    Text="Modifier"
                                    Style="{StaticResource PrimaryActionButton}"
                                    Command="{Binding EditCommand}" />

                            <Button Grid.Column="2"
                                    Text="Supprimer"
                                    Style="{StaticResource PrimaryActionButton}"
                                    TextColor="Red"
                                    Command="{Binding DeleteCommand}" />
                        </Grid>

                        <!-- DESCRIPTION -->
                        <Label Text="Description"
                               FontAttributes="Bold"
                               Margin="0,10,0,0" />
                        <Frame Padding="12"
                               BorderColor="#E2E8F0"
                               CornerRadius="10">
                            <Label Text="{Binding Appel.Description}" />
                        </Frame>

                    </VerticalStackLayout>
                </ScrollView>

            </Grid>

        </layouts:RoleDrawerLayout.MainContent>
    </layouts:RoleDrawerLayout>
</ContentPage>
