<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SyndicApp.Mobile.Views.Finances.AppelDetailsPage"
             Title="Appel de fonds">
    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">
            <Label Text="{Binding Appel.Description}" FontSize="24" FontAttributes="Bold"/>

            <Frame Padding="16" BorderColor="#E2E8F0" CornerRadius="14">
                <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto">
                    <Label Text="{Binding Appel.DateEmission, StringFormat='{0:dd/MM/yyyy}'}" />
                    <ProgressBar Grid.Row="1"
                                 Progress="{Binding Appel.MontantPaye, Converter={StaticResource ProgressConverter}, ConverterParameter={Binding Appel.MontantTotal}}"/>
                    <Grid Grid.Row="2" ColumnDefinitions="*,*,*"
                          Margin="0,10,0,0">
                        <VerticalStackLayout>
                            <Label Text="Montant total" FontSize="12"/>
                            <Label Text="{Binding Appel.MontantTotal, StringFormat='{0:N2} $'}" FontAttributes="Bold"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1">
                            <Label Text="Paye" FontSize="12"/>
                            <Label Text="{Binding Appel.MontantPaye, StringFormat='{0:N2} $'}" FontAttributes="Bold"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="2">
                            <Label Text="Restant" FontSize="12"/>
                            <Label Text="{Binding Appel.MontantReste, StringFormat='{0:N2} $'}" FontAttributes="Bold"/>
                        </VerticalStackLayout>
                    </Grid>
                </Grid>
            </Frame>

            <Label Text="Paiements" FontAttributes="Bold" />
            <CollectionView ItemsSource="{Binding Appel.Paiements}" SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="Auto,*,Auto" Padding="4,10">
                            <Label Text="$" FontSize="18" Margin="0,-2,8,0"/>
                            <VerticalStackLayout>
                                <Label Text="{Binding Statut}" FontAttributes="Bold"/>
                                <Label Text="{Binding DatePaiement, StringFormat='{0:dd/MM/yyyy}'}" FontSize="12"/>
                            </VerticalStackLayout>
                            <Label Grid.Column="2" Text="{Binding Montant, StringFormat='{0:N2} $'}" FontAttributes="Bold" VerticalOptions="Center"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Grid ColumnDefinitions="*,*,*" Margin="0,12,0,0">
                <Button Text="Cloturer" Command="{Binding CloturerCommand}" />
                <Button Grid.Column="1" Text="Modifier" Command="{Binding EditCommand}" />
                <Button Grid.Column="2" Text="Supprimer" TextColor="Red" Command="{Binding DeleteCommand}" />
            </Grid>

            <Label Text="Description" FontAttributes="Bold" Margin="0,10,0,0"/>
            <Frame Padding="12" BorderColor="#E2E8F0" CornerRadius="10">
                <Label Text="{Binding Appel.Description}" />
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
