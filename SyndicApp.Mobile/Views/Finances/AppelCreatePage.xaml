<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SyndicApp.Mobile.Views.Finances.AppelCreatePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Créer Appels De Fonds"
    BackgroundColor="White"
    Shell.NavBarIsVisible="False">

    <!-- PALETTE LOCALE -->
    <ContentPage.Resources>
        <Color x:Key="TopbarColor">#2563EB</Color>
        <Color x:Key="HeaderTextOnDark">#FFFFFF</Color>
        <Color x:Key="BodyText">#111827</Color>
        <Color x:Key="Divider">#E5E7EB</Color>
        <Style TargetType="Label">
            <Setter Property="TextColor" Value="{StaticResource BodyText}"/>
        </Style>
        <Style x:Key="EntryStyle" TargetType="Entry">
            <Setter Property="TextColor" Value="{StaticResource BodyText}"/>
            <Setter Property="PlaceholderColor" Value="#9CA3AF"/>
            <Setter Property="BackgroundColor" Value="Transparent"/>
            <Setter Property="ClearButtonVisibility" Value="WhileEditing"/>
        </Style>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#4F46E5"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="HeightRequest" Value="48"/>
            <Setter Property="FontAttributes" Value="Bold"/>
        </Style>
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="BackgroundColor" Value="#E5E7EB"/>
            <Setter Property="TextColor" Value="#111827"/>
        </Style>
    </ContentPage.Resources>

    <!-- LAYERS -->
    <Grid x:Name="Root" RowDefinitions="Auto,*" BackgroundColor="White">

        <!-- TOPBAR -->
        <Grid BackgroundColor="{StaticResource TopbarColor}" Padding="12,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="BtnOpen"
                    Grid.Column="0"
                    Text="☰"
                    FontSize="22"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource HeaderTextOnDark}"
                    Clicked="OpenDrawer_Clicked"/>

            <Label Grid.Column="1"
                   Text="Créer Appels De Fonds"
                   HorizontalTextAlignment="Center"
                   VerticalOptions="Center"
                   FontAttributes="Bold"
                   TextColor="{StaticResource HeaderTextOnDark}"/>

            <Label Grid.Column="2"
                   Text="• • •"
                   TextColor="{StaticResource HeaderTextOnDark}"
                   VerticalOptions="Center"/>
        </Grid>

        <!-- CONTENU -->
        <Grid Grid.Row="1" BackgroundColor="White">
            <ScrollView>
                <VerticalStackLayout Padding="20" Spacing="16">

                    <Label Text="Description" FontAttributes="Bold"/>
                    <Entry Style="{StaticResource EntryStyle}"
                           Placeholder="Charges trimestrielles"
                           Text="{Binding Description, Mode=TwoWay}"/>

                    <Label Text="Date d’émission" FontAttributes="Bold"/>
<DatePicker
    Date="{Binding DateEmission, Mode=TwoWay}"
    Format="dd/MM/yyyy"
    TextColor="{StaticResource BodyText}"
    BackgroundColor="Transparent" />

<!-- Affichage lisible juste en dessous (optionnel) -->
<Label
    Text="{Binding DateEmission, StringFormat='Sélectionnée : {0:dd/MM/yyyy}'}"
    FontSize="12"
    TextColor="#6B7280" />


                    <Label Text="Résidence" FontAttributes="Bold"/>
                    <Entry Style="{StaticResource EntryStyle}"
                           Placeholder="GUID résidence (temporaire)"
                           Text="{Binding ResidenceId, Mode=TwoWay}"/>

                   <Label Text="Montant total" FontAttributes="Bold"/>
<Entry Style="{StaticResource EntryStyle}"
       Keyboard="Numeric"
       MaxLength="12"
       IsTextPredictionEnabled="False"
       Text="{Binding MontantTotalText, Mode=TwoWay}" />


                    <Grid ColumnDefinitions="*,*" Margin="0,16,0,0" ColumnSpacing="12">
                        <Button Text="Annuler"
                                Style="{StaticResource SecondaryButton}"
                                Clicked="OnCancelClicked"/>
                        <Button Grid.Column="1"
                                Text="Créer"
                                Style="{StaticResource PrimaryButton}"
                                Command="{Binding CreateCommand}"/>
                    </Grid>
                </VerticalStackLayout>
            </ScrollView>
        </Grid>

        <!-- OVERLAY -->
        <BoxView x:Name="Backdrop"
                 Grid.RowSpan="2"
                 BackgroundColor="#66000000"
                 Opacity="0"
                 InputTransparent="True">
            <BoxView.GestureRecognizers>
                <TapGestureRecognizer Tapped="Backdrop_Tapped"/>
            </BoxView.GestureRecognizers>
        </BoxView>

        <!-- DRAWER (raccourci) -->
        <Border x:Name="Drawer"
                Grid.RowSpan="2"
                BackgroundColor="White"
                StrokeThickness="0"
                TranslationX="-1000"
                Padding="0">
            <Grid RowDefinitions="Auto,*">
                <Grid BackgroundColor="{StaticResource TopbarColor}" Padding="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Label Text="Navigation"
                           TextColor="{StaticResource HeaderTextOnDark}"
                           FontAttributes="Bold"
                           VerticalOptions="Center"/>
                    <Button Grid.Column="1"
                            Text="→"
                            FontSize="22"
                            BackgroundColor="Transparent"
                            TextColor="{StaticResource HeaderTextOnDark}"
                            Clicked="CloseDrawer_Clicked"/>
                </Grid>

                <ScrollView Grid.Row="1">
                    <VerticalStackLayout Padding="16" Spacing="10">
                        <Label Text="Tableau de bord" FontAttributes="Bold"/>
                        <Button Text="Dashboard"
                                BackgroundColor="Transparent"
                                Clicked="OnGoDashboard"/>
                        <BoxView HeightRequest="1" BackgroundColor="{StaticResource Divider}"/>
                        <Label Text="Finances" FontAttributes="Bold"/>
                        <Button Text="Appels de fonds"
                                BackgroundColor="Transparent"
                                Clicked="OnGoAppels"/>
                    </VerticalStackLayout>
                </ScrollView>
            </Grid>
        </Border>
    </Grid>
</ContentPage>
