<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SyndicApp.Mobile.Views.Finances.AppelCreatePage"
    x:Name="Page"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:SyndicApp.Mobile.ViewModels.Finances"
    xmlns:layouts="clr-namespace:SyndicApp.Mobile.Views.Layout"
    x:DataType="viewmodels:AppelCreateViewModel"
    Title="Créer appels de fonds"
    BackgroundColor="White"
    Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <Color x:Key="TopbarColor">#2563EB</Color>
        <Color x:Key="HeaderTextOnDark">#FFFFFF</Color>
        <Color x:Key="BodyText">#111827</Color>
        <Color x:Key="Divider">#E5E7EB</Color>

        <Style TargetType="Label">
            <Setter Property="TextColor" Value="{StaticResource BodyText}" />
        </Style>

        <Style x:Key="EntryStyle" TargetType="Entry">
            <Setter Property="TextColor" Value="{StaticResource BodyText}" />
            <Setter Property="PlaceholderColor" Value="#9CA3AF" />
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="ClearButtonVisibility" Value="WhileEditing" />
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#4F46E5" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="CornerRadius" Value="14" />
            <Setter Property="HeightRequest" Value="48" />
            <Setter Property="FontAttributes" Value="Bold" />
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="BackgroundColor" Value="#E5E7EB" />
            <Setter Property="TextColor" Value="#111827" />
        </Style>
    </ContentPage.Resources>

    <layouts:RoleDrawerLayout>
        <layouts:RoleDrawerLayout.MainContent>
            <Grid RowDefinitions="Auto,*"
                  BackgroundColor="White">

                <!-- Header local -->
                <Grid Grid.Row="0"
                      Padding="16"
                      ColumnDefinitions="Auto,*,Auto">
                    <Button Text="←"
                            FontSize="20"
                            BackgroundColor="Transparent"
                            TextColor="{StaticResource BodyText}"
                            Clicked="OnCancelClicked" />
                    <Label Grid.Column="1"
                           Text="Créer appel de fonds"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           FontAttributes="Bold"
                           TextColor="{StaticResource BodyText}" />
                </Grid>

                <!-- Formulaire -->
                <ScrollView Grid.Row="1">
                    <VerticalStackLayout Padding="20" Spacing="16">

                        <Label Text="Description" FontAttributes="Bold" />
                        <Entry Style="{StaticResource EntryStyle}"
                               Placeholder="Charges trimestrielles"
                               Text="{Binding Description, Mode=TwoWay}" />

                        <Label Text="Date d'émission" FontAttributes="Bold" />
                        <DatePicker
                            Date="{Binding DateEmission, Mode=TwoWay}"
                            Format="dd/MM/yyyy"
                            TextColor="{StaticResource BodyText}"
                            BackgroundColor="Transparent" />

                        <Label
                            Text="{Binding DateEmission, StringFormat='Sélectionnée : {0:dd/MM/yyyy}'}"
                            FontSize="12"
                            TextColor="#6B7280" />

                        <Label Text="Résidence" FontAttributes="Bold" />
                        <Picker
                            Title="Sélectionner une résidence"
                            ItemsSource="{Binding Residences}"
                            ItemDisplayBinding="{Binding Nom}"
                            SelectedItem="{Binding SelectedResidence}"
                            TextColor="{StaticResource BodyText}" />

                        <Label Text="Montant total" FontAttributes="Bold" />
                        <Entry Style="{StaticResource EntryStyle}"
                               Keyboard="Numeric"
                               MaxLength="12"
                               IsTextPredictionEnabled="False"
                               Text="{Binding MontantTotalText, Mode=TwoWay}" />

                        <Grid ColumnDefinitions="*,*"
                              Margin="0,16,0,0"
                              ColumnSpacing="12">
                            <Button Text="Annuler"
                                    Style="{StaticResource SecondaryButton}"
                                    Clicked="OnCancelClicked" />
                            <Button Grid.Column="1"
                                    Text="Créer"
                                    Style="{StaticResource PrimaryButton}"
                                    Command="{Binding CreateCommand}" />
                        </Grid>
                    </VerticalStackLayout>
                </ScrollView>
            </Grid>
        </layouts:RoleDrawerLayout.MainContent>
    </layouts:RoleDrawerLayout>
</ContentPage>
