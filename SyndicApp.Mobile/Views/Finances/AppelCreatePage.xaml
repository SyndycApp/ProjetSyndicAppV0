<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SyndicApp.Mobile.Views.Finances.AppelCreatePage"
             Title="Nouvel appel">
    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="14">
            <Label Text="Titre / Description" FontAttributes="Bold"/>
            <Entry Text="{Binding Titre}" Placeholder="Charges trimestrielles"/>

            <Label Text="Date demission" FontAttributes="Bold"/>
            <DatePicker Date="{Binding DateEmission}" />

            <Label Text="Residence" FontAttributes="Bold"/>
            <Entry Text="{Binding ResidenceId}" Placeholder="GUID residence (temporaire)"/>

            <Label Text="Montant total" FontAttributes="Bold"/>
            <Entry Keyboard="Numeric" Text="{Binding MontantTotal, StringFormat='{}{0:F2}'}" />

            <Grid ColumnDefinitions="*,*" Margin="0,10,0,0">
                <Button Text="Annuler" Grid.Column="0" Command="{Binding Source={x:Reference Name=ThisPage}, Path=Navigation.PopAsync}"/>
                <Button Text="Creer" Grid.Column="1" Command="{Binding CreateCommand}" />
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
