<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SyndicApp.Mobile.Views.Finances.AppelEditPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:conv="clr-namespace:SyndicApp.Mobile.Converters"
    Shell.NavBarIsVisible="False"
    BackgroundColor="White"
    Title="Modifier l'appel">

    <ContentPage.Resources>
        <Color x:Key="TopbarColor">#2563EB</Color>
        <Color x:Key="HeaderTextOnDark">#FFFFFF</Color>
        <Color x:Key="BodyText">#111827</Color>
        <Color x:Key="Divider">#E5E7EB</Color>
        <Style TargetType="Label">
            <Setter Property="TextColor" Value="{StaticResource BodyText}" />
        </Style>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="TextColor" Value="{StaticResource BodyText}" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="HorizontalOptions" Value="Start" />
        </Style>

        <conv:ProgressConverter x:Key="ProgressConverter" />
    </ContentPage.Resources>

    <Grid x:Name="Root" RowDefinitions="Auto,*">
        <!-- TOPBAR -->
        <Grid BackgroundColor="{StaticResource TopbarColor}" Padding="12,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="BtnOpen"
                    Grid.Column="0"
                    Text="☰"
                    FontSize="22"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource HeaderTextOnDark}"
                    Clicked="OpenDrawer_Clicked"/>

            <Label Grid.Column="1"
                   Text="Edit Appels De Fonds"
                   HorizontalTextAlignment="Center"
                   VerticalOptions="Center"
                   FontAttributes="Bold"
                   TextColor="{StaticResource HeaderTextOnDark}"/>

            <!-- Retour -->
            <Button Grid.Column="2"
                    Text="←"
                    FontSize="22"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource HeaderTextOnDark}"
                    Clicked="OnBackClicked"/>
        </Grid>

        <!-- CONTENU -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="16" Spacing="14">
                <Entry Text="{Binding Description}" Placeholder="Titre / description"/>
                <DatePicker Date="{Binding DateEmission}" />
                <Entry Text="{Binding ResidenceId}" Placeholder="Résidence (GUID temp.)"/>

                <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" >
                    <VerticalStackLayout>
                        <Label Text="Montant total" FontAttributes="Bold"/>
                        <Entry Keyboard="Numeric" Text="{Binding MontantTotal}" />
                    </VerticalStackLayout>

                    <Grid Grid.ColumnSpan="2" Grid.Row="1" ColumnDefinitions="*,*,*"
                          Margin="0,10,0,0">
                        <Frame Padding="10" BorderColor="#1F4CA3" CornerRadius="10">
                            <VerticalStackLayout>
                                <Label Text="Paiements" FontSize="12"/>
                                <Label Text="{Binding NbPaiements}" FontAttributes="Bold"/>
                            </VerticalStackLayout>
                        </Frame>
                        <Frame Padding="10" BorderColor="#1F4CA3" CornerRadius="10">
                            <VerticalStackLayout>
                                <Label Text="Payé" FontSize="12"/>
                                <Label Text="{Binding MontantPaye, StringFormat='{0:N2} '}" FontAttributes="Bold"/>
                            </VerticalStackLayout>
                        </Frame>
                        <Frame Padding="10" BorderColor="#1F4CA3" CornerRadius="10">
                            <VerticalStackLayout>
                                <Label Text="Restant" FontSize="12"/>
                                <Label Text="{Binding MontantReste, StringFormat='{0:N2} '}" FontAttributes="Bold"/>
                            </VerticalStackLayout>
                        </Frame>
                    </Grid>
                </Grid>

                <Grid ColumnDefinitions="*,*" Margin="0,10,0,0">
                    <Button Text="ENREGISTRER" Command="{Binding SaveCommand}" />
                    <Button Grid.Column="1" Text="CLOTURER" Command="{Binding CloturerCommand}" />
                </Grid>

                <Button Text="SUPPRIMER" TextColor="Red"
                        Margin="0,10,0,0"
                        Clicked="OnDeleteClicked"/>
            </VerticalStackLayout>
        </ScrollView>

        <!-- OVERLAY -->
        <BoxView x:Name="Backdrop"
                 Grid.RowSpan="2"
                 BackgroundColor="#66000000"
                 Opacity="0"
                 InputTransparent="True">
            <BoxView.GestureRecognizers>
                <TapGestureRecognizer Tapped="Backdrop_Tapped"/>
            </BoxView.GestureRecognizers>
        </BoxView>

        <!-- DRAWER -->
        <Border x:Name="Drawer"
                Grid.RowSpan="2"
                BackgroundColor="White"
                StrokeThickness="0"
                TranslationX="-1000"
                Padding="0">
            <Grid RowDefinitions="Auto,*">
                <Grid BackgroundColor="{StaticResource TopbarColor}" Padding="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Label Text="Navigation"
                           TextColor="{StaticResource HeaderTextOnDark}"
                           FontAttributes="Bold"/>
                    <Button Grid.Column="1" Text="→" FontSize="22"
                            BackgroundColor="Transparent"
                            TextColor="{StaticResource HeaderTextOnDark}"
                            Clicked="CloseDrawer_Clicked"/>
                </Grid>

                <ScrollView Grid.Row="1">
                    <VerticalStackLayout Padding="16" Spacing="10">
                        <Label Text="Tableau de bord" FontAttributes="Bold"/>
                        <Button Text="Dashboard" Style="{StaticResource MenuButtonStyle}"
                                CommandParameter="//syndic-dashboard" Clicked="OnMenuItemClicked"/>
                        <BoxView HeightRequest="1" BackgroundColor="{StaticResource Divider}" />
                        <Label Text="Finances" FontAttributes="Bold"/>
                        <Button Text="Appels de fonds" Style="{StaticResource MenuButtonStyle}"
                                CommandParameter="//appels" Clicked="OnMenuItemClicked"/>
                        <Button Text="Créer un appel" Style="{StaticResource MenuButtonStyle}"
                                CommandParameter="appel-create" Clicked="OnMenuItemClicked"/>
                    </VerticalStackLayout>
                </ScrollView>
            </Grid>
        </Border>
    </Grid>
</ContentPage>
