<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SyndicApp.Mobile.Views.Finances.AppelEditPage"
             Title="Modifier l'appel">
    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="14">
            <Entry Text="{Binding Description}" Placeholder="Titre / description"/>
            <DatePicker Date="{Binding DateEmission}" />
            <Entry Text="{Binding ResidenceId}" Placeholder="Residence (GUID temp.)"/>

            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" >
                <VerticalStackLayout>
                    <Label Text="Montant total" FontAttributes="Bold"/>
                    <Entry Keyboard="Numeric" Text="{Binding MontantTotal}" />
                </VerticalStackLayout>

                <Grid Grid.ColumnSpan="2" Grid.Row="1" ColumnDefinitions="*,*,*"
                      Margin="0,10,0,0">
                    <Frame Padding="10" BorderColor="#1F4CA3" CornerRadius="10">
                        <VerticalStackLayout>
                            <Label Text="Paiements" FontSize="12"/>
                            <Label Text="{Binding NbPaiements}" FontAttributes="Bold"/>
                        </VerticalStackLayout>
                    </Frame>
                    <Frame Padding="10" BorderColor="#1F4CA3" CornerRadius="10">
                        <VerticalStackLayout>
                            <Label Text="Paye" FontSize="12"/>
                            <Label Text="{Binding MontantPaye, StringFormat='{0:N2} '}" FontAttributes="Bold"/>
                        </VerticalStackLayout>
                    </Frame>
                    <Frame Padding="10" BorderColor="#1F4CA3" CornerRadius="10">
                        <VerticalStackLayout>
                            <Label Text="Restant" FontSize="12"/>
                            <Label Text="{Binding MontantReste, StringFormat='{0:N2} '}" FontAttributes="Bold"/>
                        </VerticalStackLayout>
                    </Frame>
                </Grid>
            </Grid>

            <Grid ColumnDefinitions="*,*" Margin="0,10,0,0">
                <Button Text="ENREGISTRER" Command="{Binding SaveCommand}" />
                <Button Grid.Column="1" Text="CLOTURER" Command="{Binding CloturerCommand}" />
            </Grid>

            <Button Text="SUPPRIMER" TextColor="Red"
                    Margin="0,10,0,0"
                    Clicked="OnDeleteClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
