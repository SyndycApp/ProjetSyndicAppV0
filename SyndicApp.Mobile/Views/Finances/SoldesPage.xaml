<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"             xmlns:vm="clr-namespace:SyndicApp.Mobile.ViewModels.Finances"             x:Class="SyndicApp.Mobile.Views.Finances.SoldesPage"             Title="Soldes">    <ScrollView>        <VerticalStackLayout Padding="16" Spacing="12">            <Label Text="Solde Lot" FontAttributes="Bold" />            <Entry Placeholder="LotId (GUID)" Text="{Binding LotId}" />            <Button Text="Charger" Command="{Binding LoadLotAsyncCommand}" />            <Label Text="{Binding SoldeLot}" />            <BoxView HeightRequest="1" />            <Label Text="Solde Residence" FontAttributes="Bold" />            <Entry Placeholder="ResidenceId (GUID)" Text="{Binding ResidenceId}" />            <Button Text="Charger" Command="{Binding LoadResidenceAsyncCommand}" />            <Label Text="{Binding SoldeResidence}" />        </VerticalStackLayout>    </ScrollView></ContentPage>