@page "/residences"
@inject HttpClient Http

<h3>Liste des Résidences</h3>

@if (residences == null)
{
    <p><em>Chargement...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Adresse</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var res in residences)
        {
            <tr>
                <td>@res.nom</td>
                <td>@res.adresse</td>
                <td>
                    <a href="/residences/details/@res.id">Détails</a> |
                    <a href="/residences/edit/@res.id">Modifier</a> |
                    <a href="/residences/delete/@res.id">Supprimer</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <a href="/residences/create" class="btn btn-primary">Ajouter une résidence</a>
}

@code {
    private List<ResidenceDto>? residences;

    protected override async Task OnInitializedAsync()
    {
        residences = await Http.GetFromJsonAsync<List<ResidenceDto>>("api/residences");
    }

    public class ResidenceDto
    {
        public Guid id { get; set; }
        public string nom { get; set; }
        public string adresse { get; set; }
    }
}
